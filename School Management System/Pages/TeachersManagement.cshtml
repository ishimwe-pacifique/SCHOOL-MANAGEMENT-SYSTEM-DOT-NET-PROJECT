@page
@model School_Management_System.Pages.TeachersManagementModel
@{
    ViewData["Title"] = "Teacher Management";
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Teacher Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #4f46e5;
            --primary-light: #e0e7ff;
            --secondary: #10b981;
            --secondary-light: #d1fae5;
            --danger: #ef4444;
            --danger-light: #fee2e2;
            --warning: #f59e0b;
            --warning-light: #fef3c7;
            --info: #3b82f6;
            --info-light: #dbeafe;
            --success: #10b981;
            --success-light: #d1fae5;
            --dark: #111827;
            --light: #f9fafb;
            --grey: #6b7280;
            --grey-light: #f3f4f6;
            --border-radius: 12px;
            --transition: all 0.3s ease;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }

        body {
            background-color: #f9fafb;
            color: var(--dark);
            line-height: 1.5;
        }

        .dashboard {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 280px;
            background-color: white;
            box-shadow: var(--shadow);
            z-index: 10;
            transition: var(--transition);
            position: fixed;
            left: 0;
            top: 0;
            height: 100%;
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--grey-light);
        }

        .sidebar-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .sidebar-logo {
            color: var(--primary);
            font-size: 1.75rem;
        }

        .nav-menu {
            padding: 1rem 0;
        }

        .nav-item {
            padding: 0.5rem 1.5rem;
            cursor: pointer;
            transition: var(--transition);
            border-left: 3px solid transparent;
        }

            .nav-item:hover {
                background-color: var(--grey-light);
                border-left-color: var(--primary);
            }

            .nav-item.active {
                background-color: var(--primary-light);
                border-left-color: var(--primary);
            }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--grey);
            text-decoration: none;
            font-weight: 500;
            padding: 0.5rem 0;
        }

        .nav-item.active .nav-link {
            color: var(--primary);
        }

        .nav-item:hover .nav-link {
            color: var(--primary);
        }

        .nav-icon {
            font-size: 1.25rem;
            width: 1.5rem;
            text-align: center;
        }

        .content {
            flex: 1;
            padding: 2rem;
            margin-left: 280px;
            transition: var(--transition);
        }

        .content-header {
            margin-bottom: 2rem;
        }

        .main-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .main-subtitle {
            color: var(--grey);
            font-size: 1rem;
        }

        .btn {
            background-color: var(--primary);
            color: white;
            border: none;
            padding: 0.75rem 1.25rem;
            border-radius: var(--border-radius);
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

            .btn:hover {
                background-color: #4338ca;
                transform: translateY(-2px);
                box-shadow: var(--shadow);
            }

        .btn-secondary {
            background-color: var(--grey-light);
            color: var(--dark);
        }

            .btn-secondary:hover {
                background-color: var(--grey);
                color: white;
            }

        .btn-danger {
            background-color: var(--danger);
        }

            .btn-danger:hover {
                background-color: #dc2626;
            }

        .btn-success {
            background-color: var(--success);
        }

            .btn-success:hover {
                background-color: #0d9488;
            }

        .form-container {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .form-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: var(--primary);
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid var(--grey-light);
            border-radius: var(--border-radius);
            transition: var(--transition);
        }

            .form-control:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 3px var(--primary-light);
            }

        .form-hint {
            font-size: 0.875rem;
            color: var(--grey);
            margin-top: 0.25rem;
        }

        .table-container {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 1.5rem;
            overflow-x: auto;
        }

        .table-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: var(--primary);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid var(--grey-light);
        }

        th {
            font-weight: 600;
            color: var(--dark);
            background-color: var(--grey-light);
        }

        tr:hover {
            background-color: var(--grey-light);
        }

        .actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-sm {
            padding: 0.5rem 0.75rem;
            font-size: 0.875rem;
        }

        .logout-wrapper {
            padding: 0 1.5rem;
            margin-top: auto;
        }

        .nav-footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            padding: 1.5rem;
            border-top: 1px solid var(--grey-light);
        }

        .toggle-sidebar {
            display: none;
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 20;
            background-color: var(--primary);
            color: white;
            border: none;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            font-size: 1.25rem;
            cursor: pointer;
            box-shadow: var(--shadow);
        }

        /* Modal customization */
        .modal-content {
            border-radius: var(--border-radius);
            border: none;
            box-shadow: var(--shadow-lg);
        }

        .modal-header {
            border-bottom: 1px solid var(--grey-light);
            padding: 1.25rem 1.5rem;
        }

        .modal-title {
            font-weight: 600;
            color: var(--dark);
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-footer {
            border-top: 1px solid var(--grey-light);
            padding: 1rem 1.5rem;
        }

        /* Responsive design */
        @@media (max-width: 991px) {
            .sidebar {
                width: 240px;
                transform: translateX(-100%);
            }

            .content {
                margin-left: 0;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .toggle-sidebar {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .content.sidebar-active {
                margin-left: 240px;
            }
        }

        @@media (max-width: 767px) {
            .content {
                padding: 1.5rem;
            }

                .content.sidebar-active {
                    margin-left: 0;
                    opacity: 0.5;
                    pointer-events: none;
                }

            .actions {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard">
        <button class="toggle-sidebar">
            <i class="fas fa-bars"></i>
        </button>

        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-title">
                    <i class="fas fa-school sidebar-logo"></i>
                    <span>Admin Panel</span>
                </div>
            </div>

            <nav class="nav-menu">
                <div class="nav-item">
                    <a asp-page="/AdminDashboard" class="nav-link">
                        <i class="fas fa-chalkboard nav-icon"></i>
                        <span>Dashboard</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a asp-page="/ClassManagment" class="nav-link">
                        <i class="fas fa-chalkboard nav-icon"></i>
                        <span>Manage Classes</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/SubjectManagment" class="nav-link">
                        <i class="fas fa-book nav-icon"></i>
                        <span>Manage Subjects</span>
                    </a>
                </div>
                <div class="nav-item active">
                    <a href="/TeacherManagement" class="nav-link">
                        <i class="fas fa-chalkboard-teacher nav-icon"></i>
                        <span>Manage Teachers</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/StudentManagement" class="nav-link">
                        <i class="fas fa-user-graduate nav-icon"></i>
                        <span>Manage Students</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-money-bill-wave nav-icon"></i>
                        <span>Manage Fees</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-clipboard-list nav-icon"></i>
                        <span>Exam Marks</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-calendar-check nav-icon"></i>
                        <span>Teacher Attendance</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-chart-pie nav-icon"></i>
                        <span>View Reports</span>
                    </a>
                </div>
            </nav>

            <div class="nav-footer">
                <a href="/Logout" class="btn btn-secondary">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </aside>

        <main class="content">
            <div class="content-header">
                <h1 class="main-title">Teacher Management</h1>
                <p class="main-subtitle">Add, update, and delete teachers</p>
                <a href="/AdminDashboard" class="btn btn-secondary" style="margin-top: 1rem; display: inline-block; width: auto;">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">@Model.SuccessMessage</div>
            }
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <div class="form-container">
                <h2 class="form-title">Add New Teacher</h2>
                <form method="post" asp-page-handler="AddTeacher">
                    <div class="form-group">
                        <label asp-for="Teacher.FullName" class="form-label">Full Name</label>
                        <input asp-for="Teacher.FullName" class="form-control" placeholder="e.g., John Doe">
                        <span asp-validation-for="Teacher.FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Teacher.Email" class="form-label">Email</label>
                        <input asp-for="Teacher.Email" type="email" class="form-control" placeholder="e.g., john.doe@school.edu">
                        <span asp-validation-for="Teacher.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Teacher.Phone" class="form-label">Phone Number</label>
                        <input asp-for="Teacher.Phone" class="form-control" placeholder="e.g., +1234567890">
                        <span asp-validation-for="Teacher.Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Teacher.PrimarySubjectID" class="form-label">Primary Subject</label>
                        <select asp-for="Teacher.PrimarySubjectID" class="form-control" asp-items="Model.Subjects">
                            <option value="">Select primary subject</option>
                        </select>
                        <span asp-validation-for="Teacher.PrimarySubjectID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Teacher.JoinDate" class="form-label">Join Date</label>
                        <input asp-for="Teacher.JoinDate" type="date" class="form-control">
                        <span asp-validation-for="Teacher.JoinDate" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-plus-circle"></i> Add Teacher
                    </button>
                </form>
            </div>

            <div class="table-container">
                <h2 class="table-title">Teacher List</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Primary Subject</th>
                            <th>Join Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Model.Teachers)
                        {
                            <tr>
                                <td>@teacher.FullName</td>
                                <td>@teacher.Email</td>
                                <td>@teacher.Phone</td>
                                <td>@teacher.PrimarySubjectName</td>
                                <td>@teacher.JoinDate.ToString("yyyy-MM-dd")</td>
                                <td class="actions">
                                    <button class="btn btn-secondary btn-sm edit-btn"
                                            data-id="@teacher.TeacherID"
                                            data-name="@teacher.FullName"
                                            data-email="@teacher.Email"
                                            data-phone="@teacher.Phone"
                                            data-subjectid="@teacher.PrimarySubjectID"
                                            data-joindate="@teacher.JoinDate.ToString("yyyy-MM-dd")">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <form method="post" asp-page-handler="DeleteTeacher" asp-route-teacherId="@teacher.TeacherID" style="display: inline;">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this teacher?');">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Edit Modal -->
            <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editModalLabel">Edit Teacher</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form method="post" asp-page-handler="EditTeacher">
                            <div class="modal-body">
                                <input type="hidden" id="editTeacherId" name="teacherId" />
                                <div class="form-group">
                                    <label for="editFullName" class="form-label">Full Name</label>
                                    <input type="text" class="form-control" id="editFullName" name="fullName" required>
                                </div>
                                <div class="form-group">
                                    <label for="editEmail" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="editEmail" name="email" required>
                                </div>
                                <div class="form-group">
                                    <label for="editPhone" class="form-label">Phone Number</label>
                                    <input type="text" class="form-control" id="editPhone" name="phone" required>
                                </div>
                                <div class="form-group">
                                    <label for="editPrimarySubjectID" class="form-label">Primary Subject</label>
                                    <select id="editPrimarySubjectID" name="primarySubjectID" class="form-control" required>
                                        @foreach (var subject in Model.Subjects)
                                        {
                                            <option value="@subject.Value">@subject.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="editJoinDate" class="form-label">Join Date</label>
                                    <input type="date" class="form-control" id="editJoinDate" name="joinDate" required>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-success">Save changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Add Bootstrap JS and dependencies -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

            <script>
                $(document).ready(function() {
                    // Initialize edit modal
                    $('.edit-btn').click(function() {
                        var id = $(this).data('id');
                        var name = $(this).data('name');
                        var email = $(this).data('email');
                        var phone = $(this).data('phone');
                        var subjectId = $(this).data('subjectid');
                        var joinDate = $(this).data('joindate');

                        $('#editTeacherId').val(id);
                        $('#editFullName').val(name);
                        $('#editEmail').val(email);
                        $('#editPhone').val(phone);
                        $('#editPrimarySubjectID').val(subjectId);
                        $('#editJoinDate').val(joinDate);

                        var editModal = new bootstrap.Modal(document.getElementById('editModal'));
                        editModal.show();
                    });

                    // Toggle sidebar
                    const toggleButton = document.querySelector('.toggle-sidebar');
                    const sidebar = document.querySelector('.sidebar');
                    const content = document.querySelector('.content');

                    if (toggleButton) {
                        toggleButton.addEventListener('click', function() {
                            sidebar.classList.toggle('active');
                            content.classList.toggle('sidebar-active');
                        });
                    }

                    // Active menu item
                    const navItems = document.querySelectorAll('.nav-item');
                    navItems.forEach(item => {
                        item.addEventListener('click', function() {
                            navItems.forEach(i => i.classList.remove('active'));
                            this.classList.add('active');
                        });
                    });
                });
            </script>
        </main>
    </div>
</body>
</html>