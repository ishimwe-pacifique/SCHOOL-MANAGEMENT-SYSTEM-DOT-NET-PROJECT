@page
@model SCHOOLMGTSYSTEM.Pages.AttendanceDetailModel
@{
    ViewData["Title"] = "Attendance Details";
}

<div class="container-fluid p-0">
    <div class="row m-0">
        <!-- Left Sidebar -->
        <div class="col-md-3 col-lg-2 bg-light p-0 border-end" style="min-height: 100vh;">
            <div class="p-3 border-bottom">
                <h5 class="fw-bold">
                    <i class="bi bi-calendar3"></i> Teacher Portal
                </h5>
            </div>
            <div class="list-group list-group-flush">
                <a asp-page="/TeacherDashboard" class="list-group-item list-group-item-action">
                    <i class="bi bi-house-door me-2"></i> Dashboard
                </a>
                <a asp-page="/MarkStudentAttendance" class="list-group-item list-group-item-action">
                    <i class="bi bi-calendar-check me-2"></i> Mark Student Attendance
                </a>
                <a asp-page="/ViewAttendanceReports" class="list-group-item list-group-item-action bg-light">
                    <i class="bi bi-file-earmark-text me-2"></i> View Attendance Reports
                </a>
                <a asp-page="/ViewExamMarks" class="list-group-item list-group-item-action">
                    <i class="bi bi-file-earmark-bar-graph me-2"></i> View Exam Marks
                </a>
            </div>
            <div class="mt-auto p-3 border-top" style="position: absolute; bottom: 0; width: 100%;">
                <a asp-page="/Index" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                </a>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="col-md-9 col-lg-10 p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="mb-1">Attendance Details</h2>
                    <p class="text-muted">View student attendance history</p>
                </div>
                <div>
                    <a asp-page="/TeacherDashboard" class="btn btn-outline-secondary">
                        Back to Dashboard
                    </a>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">Filter</h5>

                    <form method="post" asp-page-handler="Filter">
                        <div class="row align-items-end">
                            <div class="col-md-3 mb-3">
                                <label for="classSelect" class="form-label">Class</label>
                                <select class="form-select" id="classSelect" asp-for="SelectedClassId" onchange="loadStudents()">
                                    <option selected>Select class</option>
                                    @foreach (var cls in Model.Classes)
                                    {
                                        <option value="@cls.Id">@cls.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="studentSelect" class="form-label">Student</label>
                                <select class="form-select" id="studentSelect" asp-for="SelectedStudentId">
                                    <option selected>Select student</option>
                                    @foreach (var student in Model.Students)
                                    {
                                        <option value="@student.Id">@student.FullName</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2 mb-3">
                                <label for="fromDate" class="form-label">From Date</label>
                                <input type="date" class="form-control" id="fromDate" asp-for="FromDate">
                            </div>
                            <div class="col-md-2 mb-3">
                                <label for="toDate" class="form-label">To Date</label>
                                <input type="date" class="form-control" id="toDate" asp-for="ToDate">
                            </div>
                            <div class="col-md-2 mb-3">
                                <button type="submit" class="btn btn-dark w-100">Apply Filter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Attendance Records Section -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">Attendance Records</h5>

                    @if (Model.AttendanceRecords.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Student Name</th>
                                        <th>Class</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model.AttendanceRecords)
                                    {
                                        <tr>
                                            <td>@record.Date.ToShortDateString()</td>
                                            <td>@record.StudentName</td>
                                            <td>@record.ClassName</td>
                                            <td>
                                                @if (record.Status == "Present")
                                                {
                                                    <span class="badge bg-success">Present</span>
                                                }
                                                else if (record.Status == "Late")
                                                {
                                                    <span class="badge bg-warning text-dark">Late</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Absent</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted py-4">No attendance records found.</p>
                    }

                    <div class="d-flex justify-content-end mt-3">
                        <button class="btn btn-outline-secondary me-2" id="printReport">
                            <i class="bi bi-printer me-1"></i> Print Report
                        </button>
                        <button class="btn btn-dark" id="exportExcel">
                            <i class="bi bi-file-earmark-excel me-1"></i> Export to Excel
                        </button>
                    </div>
                </div>
            </div>

            <!-- Attendance Summary Section -->
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">Attendance Summary</h5>

                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="p-3 border rounded">
                                <h3 class="mb-0">@Model.PresentRate%</h3>
                                <p class="text-muted mb-0">Present Rate</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 border rounded">
                                <h3 class="mb-0">@Model.LateRate%</h3>
                                <p class="text-muted mb-0">Late Rate</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 border rounded">
                                <h3 class="mb-0">@Model.AbsentRate%</h3>
                                <p class="text-muted mb-0">Absent Rate</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 border rounded">
                                <h3 class="mb-0">@Model.OverallAttendance%</h3>
                                <p class="text-muted mb-0">Overall Attendance</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Print report functionality
            document.getElementById("printReport").addEventListener("click", function() {
                window.print();
            });

            // Export to Excel functionality (placeholder - would need server-side implementation)
            document.getElementById("exportExcel").addEventListener("click", function() {
                alert("Export functionality would be implemented on the server side.");
            });
        });

        // Function to load students based on class selection
        function loadStudents() {
            const classId = document.getElementById("classSelect").value;

            // In a real implementation, this would make an AJAX call to get students
            // For now, we'll just submit the form
            if (classId && classId !== "Select class") {
                document.querySelector("form").requestSubmit();
            }
        }
    </script>
}