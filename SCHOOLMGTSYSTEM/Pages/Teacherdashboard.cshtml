@page
@model SCHOOLMGTSYSTEM.Pages.TeacherDashboardModel
@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="container-fluid p-0">
    <div class="row m-0">
        <!-- Left Sidebar -->
        <div class="col-md-3 col-lg-2 bg-light p-0 border-end" style="min-height: 100vh;">
            <div class="p-3 border-bottom">
                <h5 class="fw-bold">Teacher Panel</h5>
            </div>
            <div class="list-group list-group-flush">
                <a asp-page="/TeacherDashboard" class="list-group-item list-group-item-action bg-light">
                    <i class="bi bi-house-door me-2"></i> Dashboard
                </a>
                <a asp-page="/MarkStudentAttendance" class="list-group-item list-group-item-action">
                    <i class="bi bi-calendar-check me-2"></i> Mark Student Attendance
                </a>
                <a asp-page="/ViewAttendanceReports" class="list-group-item list-group-item-action">
                    <i class="bi bi-file-earmark-text me-2"></i> View Attendance Reports
                </a>
                <a asp-page="/ViewExamMarks" class="list-group-item list-group-item-action">
                    <i class="bi bi-file-earmark-bar-graph me-2"></i> View Exam Marks
                </a>
            </div>
            <div class="mt-auto p-3 border-top" style="position: absolute; bottom: 0; width: 100%;">
                <a asp-page="/Index" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                </a>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="col-md-9 col-lg-10 p-4">
            <h2 class="mb-1">Teacher Dashboard</h2>
            <p class="text-muted mb-4">Manage your classes and students</p>

            <!-- Cards Row -->
            <div class="row mb-4">
                <!-- Mark Student Attendance Card -->
                <div class="col-md-4 mb-3">
                    <div class="card h-100 border-0 shadow-sm" style="background-color: #e8f5e9;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-calendar-check me-2"></i> Mark Student Attendance
                            </h5>
                            <p class="card-text text-muted">Take daily attendance for your classes</p>
                            <a asp-page="/MarkStudentAttendance" class="btn btn-dark mt-2">
                                Go to Mark Student Attendance
                            </a>
                        </div>
                    </div>
                </div>

                <!-- View Attendance Reports Card -->
                <div class="col-md-4 mb-3">
                    <div class="card h-100 border-0 shadow-sm" style="background-color: #e3f2fd;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-file-earmark-text me-2"></i> View Attendance Reports
                            </h5>
                            <p class="card-text text-muted">Check attendance history and statistics</p>
                            <a asp-page="/ViewAttendanceReports" class="btn btn-dark mt-2">
                                Go to View Attendance Reports
                            </a>
                        </div>
                    </div>
                </div>

                <!-- View Exam Marks Card -->
                <div class="col-md-4 mb-3">
                    <div class="card h-100 border-0 shadow-sm" style="background-color: #fce4ec;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-file-earmark-bar-graph me-2"></i> View Exam Marks
                            </h5>
                            <p class="card-text text-muted">Access student exam results</p>
                            <a asp-page="/ViewExamMarks" class="btn btn-dark mt-2">
                                Go to View Exam Marks
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity Section -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Recent Activity</h5>
                    <p class="text-muted">No recent activity to display.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // You can add any JavaScript functionality here
        });
    </script>
}