@page
@model School_Management_System.Pages.AttendanceModel
@{
    //Layout = null;
    ViewData["Title"] = "Attendance";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #4f46e5;
            --primary-light: #e0e7ff;
            --secondary: #10b981;
            --secondary-light: #d1fae5;
            --danger: #ef4444;
            --danger-light: #fee2e2;
            --warning: #f59e0b;
            --warning-light: #fef3c7;
            --info: #3b82f6;
            --info-light: #dbeafe;
            --success: #10b981;
            --success-light: #d1fae5;
            --dark: #111827;
            --light: #f9fafb;
            --grey: #6b7280;
            --grey-light: #f3f4f6;
            --border-radius: 12px;
            --transition: all 0.3s ease;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }

        body {
            background-color: #f9fafb;
            color: var(--dark);
            line-height: 1.5;
        }

        .dashboard {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 280px;
            background-color: white;
            box-shadow: var(--shadow);
            z-index: 10;
            transition: var(--transition);
            position: fixed;
            left: 0;
            top: 0;
            height: 100%;
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--grey-light);
        }

        .sidebar-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .sidebar-logo {
            color: var(--primary);
            font-size: 1.75rem;
        }

        .nav-menu {
            padding: 1rem 0;
        }

        .nav-item {
            padding: 0.5rem 1.5rem;
            cursor: pointer;
            transition: var(--transition);
            border-left: 3px solid transparent;
        }

            .nav-item:hover {
                background-color: var(--grey-light);
                border-left-color: var(--primary);
            }

            .nav-item.active {
                background-color: var(--primary-light);
                border-left-color: var(--primary);
            }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--grey);
            text-decoration: none;
            font-weight: 500;
            padding: 0.5rem 0;
        }

        .nav-item.active .nav-link {
            color: var(--primary);
        }

        .nav-item:hover .nav-link {
            color: var(--primary);
        }

        .nav-icon {
            font-size: 1.25rem;
            width: 1.5rem;
            text-align: center;
        }

        .content {
            flex: 1;
            padding: 2rem;
            margin-left: 280px;
            transition: var(--transition);
        }

        .toggle-sidebar {
            display: none;
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 20;
            background-color: var(--primary);
            color: white;
            border: none;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            font-size: 1.25rem;
            cursor: pointer;
            box-shadow: var(--shadow);
        }

        .nav-footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            padding: 1.5rem;
            border-top: 1px solid var(--grey-light);
        }

        .btn-logout {
            background-color: var(--grey-light);
            color: var(--dark);
            margin-top: 1rem;
            width: 100%;
        }

            .btn-logout:hover {
                background-color: var(--grey);
                color: white;
            }

        @@media (max-width: 991px) {
            .sidebar {
                width: 240px;
                transform: translateX(-100%);
            }

            .content {
                margin-left: 0;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .toggle-sidebar {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .content.sidebar-active {
                margin-left: 240px;
            }
        }

        @@media (max-width: 767px) {
            .content {
                padding: 1.5rem;
            }

                .content.sidebar-active {
                    margin-left: 0;
                    opacity: 0.5;
                    pointer-events: none;
                }
        }

        /* Original Attendance Page Styles */
        .card.shadow-lg.rounded {
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-lg);
            transition: var(--transition);
        }

        .card-header.bg-primary {
            background-color: var(--primary) !important;
        }

        .form-check-input:checked {
            background-color: var(--primary);
            border-color: var(--primary);
        }

        .btn-success {
            background-color: var(--success);
        }

        .btn-info {
            background-color: var(--info);
        }

        .btn-danger {
            background-color: var(--danger);
        }

        /* Button Hover Animation */
        @@keyframes btnHover {
            100% {
                transform: scale(1.05);
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            }
        }

        .btn:hover {
            animation: btnHover 0.3s ease-in-out forwards;
        }

        /* Table Row Hover Animation */
        .table-hover tbody tr:hover {
            background-color: var(--primary-light);
            transition: var(--transition);
        }

        /* Fade In Animation */
        .card, .alert, .table {
            animation: fadeIn 1s ease-in-out forwards;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

    </style>
</head>
<body>
    <div class="dashboard">
        <button class="toggle-sidebar">
            <i class="fas fa-bars"></i>
        </button>

        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-title">
                    <i class="fas fa-chalkboard-teacher sidebar-logo"></i>
                    <span>Teacher Panel</span>
                </div>
            </div>

            <nav class="nav-menu">
                <div class="nav-item">
                    <a href="/TeacherDashboard" class="nav-link">
                        <i class="fas fa-tachometer-alt nav-icon"></i>
                        <span>Dashboard</span>
                    </a>
                </div>
                <div class="nav-item active">
                    <a href="/Attendance" class="nav-link">
                        <i class="fas fa-user-check nav-icon"></i>
                        <span>Mark Student Attendance</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/AttendanceReport" class="nav-link">
                        <i class="fas fa-chart-line nav-icon"></i>
                        <span>View Attendance Reports</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/StudentMarks" class="nav-link">
                        <i class="fas fa-graduation-cap nav-icon"></i>
                        <span>View Exam Marks</span>
                    </a>
                </div>
            </nav>

            <div class="nav-footer">
                <a href="/Login" class="btn btn-logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </aside>

        <main class="content">
            <div class="container mt-3">
                <div class="card shadow-lg rounded">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h3 class="mb-0"><i class="fas fa-user-check"></i> Attendance</h3>
                    </div>

                    <div class="card-body">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle"></i> @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <form method="post" asp-page-handler="LoadStudents" class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold"><i class="fas fa-building"></i> Select Class</label>
                                <select asp-for="ClassId" asp-items="Model.ClassList" class="form-select shadow-sm" required>
                                    <option value="">-- Choose Class --</option>
                                </select>
                            </div>
                            <div class="col-md-6 d-flex align-items-end">
                                <button type="submit" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-users"></i> Load Students
                                </button>
                            </div>
                            @Html.AntiForgeryToken()
                        </form>

                        @if (Model.Students != null && Model.Students.Count > 0)
                        {
                            <h5 class="text-muted mb-3"><i class="fas fa-users"></i> Class: <span class="text-primary">@Model.GetClassNameWithSection(Model.ClassId)</span></h5>

                            <form method="post" asp-page-handler="SaveAttendance">
                                <input type="hidden" asp-for="ClassId" />

                                <div class="table-responsive">
                                    <table class="table table-hover table-bordered align-middle shadow-sm">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Student Name</th>
                                                <th class="text-center">Present?</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.Students.Count; i++)
                                            {
                                                <tr>
                                                    <td>
                                                        <span class="fw-medium">@Model.Students[i].FullName</span>
                                                        <input type="hidden" asp-for="Students[i].StudentId" />
                                                        <input type="hidden" asp-for="Students[i].FullName" />
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="form-check form-switch d-flex justify-content-center">
                                                            <input class="form-check-input" type="checkbox" asp-for="Students[i].IsPresent" title="Mark as present" />
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <button type="submit" class="btn btn-success mt-3 w-100 shadow">
                                    <i class="fas fa-save"></i> Save Attendance
                                </button>
                                @Html.AntiForgeryToken()
                            </form>

                            <div class="mt-3 d-flex justify-content-between">
                                <a href="@Url.Page("/Attendance", new { handler = "ExportExcel" })" class="btn btn-info"><i class="fas fa-file-excel"></i> Export to Excel</a>
                                <a href="@Url.Page("/Attendance", new { handler = "ExportPdf" })" class="btn btn-danger"><i class="fas fa-file-pdf"></i> Export to PDF</a>
                            </div>
                        }

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger mt-3">
                                <i class="fas fa-exclamation-triangle"></i>
                                @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <p>@modelError.ErrorMessage</p>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle sidebar
            const toggleButton = document.querySelector('.toggle-sidebar');
            const sidebar = document.querySelector('.sidebar');
            const content = document.querySelector('.content');

            toggleButton.addEventListener('click', function() {
                sidebar.classList.toggle('active');
                content.classList.toggle('sidebar-active');
            });

            // Set active menu item
            const currentPath = window.location.pathname;
            const navItems = document.querySelectorAll('.nav-item');

            navItems.forEach(item => {
                const link = item.querySelector('a');
                if (link.getAttribute('href') === currentPath) {
                    navItems.forEach(i => i.classList.remove('active'));
                    item.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>