@page
@model School_Management_System.Pages.ExamMarksModel
@{
    ViewData["Title"] = "Student Marks Management";
}

@section Styles {
    <style>
        :root {
            --admin-primary: #4f46e5;
            --admin-secondary: #10b981;
            --admin-danger: #ef4444;
            --admin-warning: #f59e0b;
            --admin-info: #3b82f6;
            --admin-success: #10b981;
        }

        .dashboard {
            display: flex;
            min-height: calc(100vh - 160px);
            margin-top: -80px;
            padding-top: 0;
        }

        .sidebar {
            width: 280px;
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.1);
            z-index: 10;
            transition: var(--transition);
            position: fixed;
            left: 20px;
            top: 20px;
            height: calc(100vh - 40px);
            display: flex;
            flex-direction: column;
        }

        body.light-theme .sidebar {
            background: var(--glass-light);
            border: 1px solid #ddd;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            flex-shrink: 0;
        }

        body.light-theme .sidebar-header {
            border-bottom: 1px solid #ddd;
        }

        .sidebar-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-shadow: 0 0 10px var(--primary-color);
        }

        body.light-theme .sidebar-title {
            color: #004477;
            text-shadow: none;
        }

        .sidebar-logo {
            color: var(--primary-color);
            font-size: 1.75rem;
        }

        .nav-menu {
            flex: 1;
            overflow-y: auto;
            overflow-x: hidden;
            padding: 1rem 0;
        }

            .nav-menu::-webkit-scrollbar {
                width: 6px;
            }

            .nav-menu::-webkit-scrollbar-track {
                background: rgba(255, 255, 255, 0.1);
                border-radius: 10px;
            }

            .nav-menu::-webkit-scrollbar-thumb {
                background: linear-gradient(135deg, var(--primary-color), rgba(0, 255, 255, 0.7));
                border-radius: 10px;
                box-shadow: 0 0 5px rgba(0, 255, 255, 0.3);
            }

                .nav-menu::-webkit-scrollbar-thumb:hover {
                    background: linear-gradient(135deg, #00d4ff, var(--primary-color));
                    box-shadow: 0 0 8px rgba(0, 255, 255, 0.5);
                }

        .nav-menu {
            scrollbar-width: thin;
            scrollbar-color: var(--primary-color) rgba(255, 255, 255, 0.1);
        }

        body.light-theme .nav-menu::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.1);
        }

        body.light-theme .nav-menu::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, #004477, rgba(0, 68, 119, 0.7));
        }

        body.light-theme .nav-menu {
            scrollbar-color: #004477 rgba(0, 0, 0, 0.1);
        }

        .nav-item {
            padding: 0.5rem 1.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
            margin: 0.25rem 0;
        }

            .nav-item:hover {
                background: rgba(0, 255, 255, 0.1);
                border-left-color: var(--primary-color);
                transform: translateX(5px);
            }

            .nav-item.active {
                background: rgba(0, 255, 255, 0.2);
                border-left-color: var(--primary-color);
                box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
            }

        body.light-theme .nav-item:hover {
            background: rgba(0, 68, 119, 0.1);
        }

        body.light-theme .nav-item.active {
            background: rgba(0, 68, 119, 0.2);
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #f0f0f0;
            text-decoration: none;
            font-weight: 500;
            padding: 0.5rem 0;
            transition: all 0.3s ease;
        }

        body.light-theme .nav-link {
            color: #222;
        }

        .nav-item.active .nav-link,
        .nav-item:hover .nav-link {
            color: var(--primary-color);
            text-shadow: 0 0 5px var(--primary-color);
        }

        body.light-theme .nav-item.active .nav-link,
        body.light-theme .nav-item:hover .nav-link {
            color: #004477;
            text-shadow: none;
        }

        .nav-icon {
            font-size: 1.25rem;
            width: 1.5rem;
            text-align: center;
        }

        .nav-footer {
            flex-shrink: 0;
            padding: 1rem 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: auto;
        }

        body.light-theme .nav-footer {
            border-top: 1px solid #ddd;
        }

        .admin-content {
            flex: 1;
            padding: 2rem;
            margin-left: 320px;
            transition: all 0.3s ease;
        }

        .content-header {
            margin-bottom: 2rem;
            text-align: center;
        }

        .main-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--primary-color);
            text-shadow: 0 0 15px var(--primary-color);
        }

        body.light-theme .main-title {
            color: #004477;
            text-shadow: none;
        }

        .main-subtitle {
            color: #f0f0f0;
            font-size: 1.2rem;
        }

        body.light-theme .main-subtitle {
            color: #666;
        }

        .form-container {
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            margin-bottom: 2rem;
        }

        body.light-theme .form-container {
            background: var(--glass-light);
            border: 1px solid #ddd;
        }

        .form-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), rgba(0, 255, 255, 0.5));
        }

        .form-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        body.light-theme .form-title {
            color: #004477;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: #f0f0f0;
            font-weight: 500;
        }

        body.light-theme .form-label {
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            color: #fff;
            transition: all 0.3s ease;
        }

        body.light-theme .form-control {
            background: rgba(255, 255, 255, 0.8);
            border: 1px solid #ddd;
            color: #333;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.3);
        }

        .table-container {
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        body.light-theme .table-container {
            background: var(--glass-light);
            border: 1px solid #ddd;
        }

        .table-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--admin-info), rgba(59, 130, 246, 0.5));
        }

        .table-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        body.light-theme .table-title {
            color: #004477;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            color: #f0f0f0;
        }

        body.light-theme table {
            color: #333;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        body.light-theme th,
        body.light-theme td {
            border-bottom: 1px solid #ddd;
        }

        th {
            font-weight: 600;
            color: var(--primary-color);
            background: rgba(0, 212, 255, 0.1);
        }

        body.light-theme th {
            background: rgba(0, 68, 119, 0.1);
        }

        tr:hover {
            background: rgba(0, 212, 255, 0.05);
        }

        body.light-theme tr:hover {
            background: rgba(0, 68, 119, 0.05);
        }

        .badge {
            padding: 0.35rem 0.65rem;
            border-radius: 50rem;
            font-weight: 500;
        }

        .bg-success {
            background: linear-gradient(135deg, var(--admin-success), rgba(16, 185, 129, 0.7));
        }

        .bg-warning {
            background: linear-gradient(135deg, var(--admin-warning), rgba(245, 158, 11, 0.7));
        }

        .bg-danger {
            background: linear-gradient(135deg, var(--admin-danger), rgba(239, 68, 68, 0.7));
        }

        .admin-btn {
            background: linear-gradient(135deg, var(--primary-color), rgba(0, 255, 255, 0.7));
            color: #000;
            border: none;
            padding: 0.75rem 1.25rem;
            border-radius: 30px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            width: 100%;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .admin-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(0, 255, 255, 0.4);
                color: #000;
            }

        .btn-success {
            background: linear-gradient(135deg, var(--admin-success), rgba(16, 185, 129, 0.7));
        }

        .btn-outline-primary {
            background: transparent;
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
        }

        body.light-theme .btn-outline-primary {
            color: #004477;
            border-color: #004477;
        }

        .btn-outline-primary:hover {
            background: var(--primary-color);
            color: #000;
        }

        body.light-theme .btn-outline-primary:hover {
            background: #004477;
            color: white;
        }

        .btn-logout {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            width: auto;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            background: linear-gradient(135deg, #666, rgba(102, 102, 102, 0.7));
            color: white;
        }

            .btn-logout:hover {
                background: linear-gradient(135deg, #ef4444, rgba(239, 68, 68, 0.7));
                color: white;
            }

        .toggle-sidebar {
            display: none;
            position: fixed;
            top: 80px;
            left: 20px;
            z-index: 20;
            background: linear-gradient(135deg, var(--primary-color), rgba(0, 255, 255, 0.7));
            color: #000;
            border: none;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            font-size: 1.25rem;
            cursor: pointer;
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive design */
        @@media (max-width: 991px) {
            .sidebar {
                width: 240px;
                transform: translateX(-100%);
            }

            .admin-content {
                margin-left: 0;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .toggle-sidebar {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .admin-content.sidebar-active {
                margin-left: 240px;
            }
        }

        @@media (max-width: 767px) {
            .admin-content {
                padding: 1.5rem;
            }

                .admin-content.sidebar-active {
                    margin-left: 0;
                    opacity: 0.5;
                    pointer-events: none;
                }

            .main-title {
                font-size: 2rem;
            }
        }
    </style>
}

<div class="dashboard">
    <button class="toggle-sidebar">
        <i class="fas fa-bars"></i>
    </button>

    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-title">
                <i class="fas fa-graduation-cap sidebar-logo"></i>
                <span>Admin Panel</span>
            </div>
        </div>

        <nav class="nav-menu">
            <div class="nav-item">
                <a asp-page="/AdminDashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt nav-icon"></i>
                    <span>Dashboard</span>
                </a>
            </div>
            <div class="nav-item">
                <a asp-page="/ClassManagment" class="nav-link">
                    <i class="fas fa-chalkboard nav-icon"></i>
                    <span>Manage Classes</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/SubjectManagment" class="nav-link">
                    <i class="fas fa-book nav-icon"></i>
                    <span>Manage Subjects</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/TeachersManagement" class="nav-link">
                    <i class="fas fa-user-tie nav-icon"></i>
                    <span>Manage Teachers</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/StudentManagement" class="nav-link">
                    <i class="fas fa-user-graduate nav-icon"></i>
                    <span>Manage Students</span>
                </a>
            </div>
            <div class="nav-item active">
                <a href="/ExamMarks" class="nav-link">
                    <i class="fas fa-clipboard-list nav-icon"></i>
                    <span>Exam Marks</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/Reports" class="nav-link">
                    <i class="fas fa-chart-line nav-icon"></i>
                    <span>View Reports</span>
                </a>
            </div>
        </nav>

        <div class="nav-footer">
            <form method="post" asp-page="/Logout">
                <button type="submit" class="admin-btn btn-logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </div>
    </aside>

    <main class="admin-content">
        <div class="content-header">
            <h1 class="main-title">Student Marks Management</h1>
            <p class="main-subtitle">Record and manage student exam marks</p>
            
            </a>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
            </div>
        }

        <div class="row">
            <!-- Left column for recording marks -->
            <div class="col-lg-5">
                <div class="form-container">
                    <h2 class="form-title"><i class="fas fa-pencil-alt me-2"></i>Record Student Mark</h2>
                    <form method="post" id="recordMarkForm">
                        <div class="form-group">
                            <label class="form-label">Select Class</label>
                            <select asp-for="SelectedClassId" asp-items="Model.ClassOptions"
                                    class="form-control" onchange="this.form.submit()">
                                <option value="">-- Select Class --</option>
                            </select>
                        </div>

                        @if (Model.SelectedClassId.HasValue)
                        {
                            <div class="form-group">
                                <label class="form-label">Select Student</label>
                                <select asp-for="SelectedStudentId" asp-items="Model.StudentOptions"
                                        class="form-control">
                                    <option value="">-- Select Student --</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Select Subject</label>
                                <select asp-for="SelectedSubject" asp-items="Model.SubjectOptions"
                                        class="form-control">
                                    <option value="">-- Select Subject --</option>
                                </select>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Mark</label>
                                        <div class="input-group">
                                            <input asp-for="Mark" class="form-control" type="number"
                                                   min="0" max="100" placeholder="0-100" />
                                            <span class="input-group-text">/ 100</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Date of Exam</label>
                                        <input asp-for="DateOfExam" class="form-control" type="date" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <button type="submit" class="admin-btn btn-success w-100">
                                    <i class="fas fa-save me-2"></i>Save Mark
                                </button>
                            </div>
                        }
                    </form>
                </div>
            </div>

            <!-- Right column for displaying marks -->
            <div class="col-lg-7">
                <div class="table-container">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="table-title"><i class="fas fa-list me-2"></i>Student Marks List</h2>
                        <form method="post" class="d-flex">
                            <select asp-for="SelectedClassId" class="form-control me-2"
                                    asp-items="Model.ClassOptions" onchange="this.form.submit()"
                                    style="width: auto;" aria-label="Filter by class">
                                <option value="">All Classes</option>
                            </select>
                            <button type="submit" class="admin-btn">
                                <i class="fas fa-filter"></i>
                            </button>
                        </form>
                    </div>

                    @if (Model.StudentMarks != null && Model.StudentMarks.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Student Name</th>
                                        <th>Subject</th>
                                        <th class="text-center">Mark</th>
                                        <th>Date of Exam</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var mark in Model.StudentMarks)
                                    {
                                        <tr>
                                            <td>@mark.StudentName</td>
                                            <td>@mark.Subject</td>
                                            <td class="text-center">
                                                @{
                                                    var badgeClass = mark.Mark >= 70 ? "bg-success" :
                                                    mark.Mark >= 50 ? "bg-warning" : "bg-danger";
                                                }
                                                <span class="badge @badgeClass">@mark.Mark%</span>
                                            </td>
                                            <td>@mark.DateOfExam.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else if (Model.SelectedClassId != null)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fs-1 text-muted"></i>
                            <p class="text-muted mt-2">No marks found for this class.</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-filter-circle fs-1 text-muted"></i>
                            <p class="text-muted mt-2">Please select a class to view marks.</p>
                        </div>
                    }
                </div>

                <!-- Class Report Summary -->
                <div class="form-container mt-4">
                    <h2 class="form-title"><i class="fas fa-chart-bar me-2"></i>Class Report Summary</h2>
                    <div class="d-flex justify-content-around text-center">
                        <div class="p-3">
                            <h3 class="text-primary mb-0">@Model.StudentMarks.Count</h3>
                            <small class="text-muted">Total Records</small>
                        </div>
                        <div class="p-3">
                            <h3 class="text-success mb-0">@Model.StudentMarks.Where(m => m.Mark >= 70).Count()</h3>
                            <small class="text-muted">Distinction Marks</small>
                        </div>
                        <div class="p-3">
                            <h3 class="text-danger mb-0">@Model.StudentMarks.Where(m => m.Mark < 50).Count()</h3>
                            <small class="text-muted">Failed Marks</small>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <a href="?handler=GenerateFullReport" class="btn btn-outline-primary w-100" target="_blank">
                            <i class="fas fa-file-pdf me-2"></i>Generate Full Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Toggle sidebar
            const toggleButton = document.querySelector('.toggle-sidebar');
            const sidebar = document.querySelector('.sidebar');
            const content = document.querySelector('.admin-content');

            if (toggleButton) {
                toggleButton.addEventListener('click', function () {
                    sidebar.classList.toggle('active');
                    content.classList.toggle('sidebar-active');
                });
            }

            // Mark input validation
            const markInput = document.querySelector('input[type="number"]');
            if (markInput) {
                markInput.addEventListener('input', function () {
                    if (this.value > 100) this.value = 100;
                    if (this.value < 0) this.value = 0;
                });
            }
        });
    </script>
}