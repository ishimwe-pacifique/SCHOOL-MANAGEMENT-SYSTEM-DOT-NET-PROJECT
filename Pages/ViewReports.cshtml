        <option value="">-- Select Student --</option>
    </select>
</div>

<div id="transcriptContainer" style="margin-top:20px;">
    <h4>Transcript</h4>
    <table class="table table-bordered" id="transcriptTable" style="display:none;">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Mark</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#classDropdown').change(function () {
                const classId = $(this).val();
                $('#studentDropdown').empty().append('<option>Loading...</option>').prop('disabled', true);
                $('#transcriptTable').hide();

                if (classId) {
                    $.getJSON('@Url.Page("ViewReports", "StudentsByClass")', { classId: classId }, function (data) {
                        $('#studentDropdown').empty().append('<option value="">-- Select Student --</option>');
                        $.each(data, function (i, student) {
                            $('#studentDropdown').append(`<option value="${student.studentId}">${student.name}</option>`);
                        });
                        $('#studentDropdown').prop('disabled', false);
                    });
                } else {
                    $('#studentDropdown').empty().append('<option value="">-- Select Student --</option>').prop('disabled', true);
                }
            });

            $('#studentDropdown').change(function () {
                const studentId = $(this).val();
                if (studentId) {
                    $.getJSON('@Url.Page("ViewReports", "Transcript")', { studentId: studentId }, function (data) {
                        const tbody = $('#transcriptTable tbody');
                        tbody.empty();
                        if (data.length > 0) {
                            $.each(data, function (i, mark) {
                                tbody.append(`<tr><td>${mark.subject}</td><td>${mark.mark}</td></tr>`);
                            });
                            $('#transcriptTable').show();
                        } else {
                            tbody.append('<tr><td colspan="2">No transcript available</td></tr>');
                            $('#transcriptTable').show();
                        }
                    });
                } else {
                    $('#transcriptTable').hide();
                }
            });
        });

    </script>
