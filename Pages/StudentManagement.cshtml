@page
@model School_Management_System.Pages.StudentManagementModel
@{
    ViewData["Title"] = "Student Management";
}

@section Styles {
    <style>
        :root {
            --admin-primary: #4f46e5;
            --admin-secondary: #10b981;
            --admin-danger: #ef4444;
            --admin-warning: #f59e0b;
            --admin-info: #3b82f6;
            --admin-success: #10b981;
            --primary-color: #00d4ff;
            --glass-dark: rgba(15, 23, 42, 0.85);
            --glass-light: rgba(255, 255, 255, 0.85);
            --transition: all 0.3s ease;
        }

        .dashboard {
            display: flex;
            min-height: calc(100vh - 160px);
            margin-top: -80px;
            padding-top: 0;
        }

        .sidebar {
            width: 280px;
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.1);
            z-index: 10;
            transition: var(--transition);
            position: fixed;
            left: 20px;
            top: 20px;
            height: calc(100vh - 40px);
            display: flex;
            flex-direction: column;
        }

        body.light-theme .sidebar {
            background: var(--glass-light);
            border: 1px solid #ddd;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            flex-shrink: 0;
        }

        body.light-theme .sidebar-header {
            border-bottom: 1px solid #ddd;
        }

        .sidebar-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-shadow: 0 0 10px var(--primary-color);
        }

        body.light-theme .sidebar-title {
            color: #004477;
            text-shadow: none;
        }

        .sidebar-logo {
            color: var(--primary-color);
            font-size: 1.75rem;
        }

        .nav-menu {
            flex: 1;
            overflow-y: auto;
            overflow-x: hidden;
            padding: 1rem 0;
        }

            .nav-menu::-webkit-scrollbar {
                width: 6px;
            }

            .nav-menu::-webkit-scrollbar-track {
                background: rgba(255, 255, 255, 0.1);
                border-radius: 10px;
            }

            .nav-menu::-webkit-scrollbar-thumb {
                background: linear-gradient(135deg, var(--primary-color), rgba(0, 255, 255, 0.7));
                border-radius: 10px;
                box-shadow: 0 0 5px rgba(0, 255, 255, 0.3);
            }

                .nav-menu::-webkit-scrollbar-thumb:hover {
                    background: linear-gradient(135deg, #00d4ff, var(--primary-color));
                    box-shadow: 0 0 8px rgba(0, 255, 255, 0.5);
                }

        .nav-menu {
            scrollbar-width: thin;
            scrollbar-color: var(--primary-color) rgba(255, 255, 255, 0.1);
        }

        body.light-theme .nav-menu::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.1);
        }

        body.light-theme .nav-menu::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, #004477, rgba(0, 68, 119, 0.7));
        }

        body.light-theme .nav-menu {
            scrollbar-color: #004477 rgba(0, 0, 0, 0.1);
        }

        .nav-item {
            padding: 0.5rem 1.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
            margin: 0.25rem 0;
        }

            .nav-item:hover {
                background: rgba(0, 255, 255, 0.1);
                border-left-color: var(--primary-color);
                transform: translateX(5px);
            }

            .nav-item.active {
                background: rgba(0, 255, 255, 0.2);
                border-left-color: var(--primary-color);
                box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
            }

        body.light-theme .nav-item:hover {
            background: rgba(0, 68, 119, 0.1);
        }

        body.light-theme .nav-item.active {
            background: rgba(0, 68, 119, 0.2);
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #f0f0f0;
            text-decoration: none;
            font-weight: 500;
            padding: 0.5rem 0;
            transition: all 0.3s ease;
        }

        body.light-theme .nav-link {
            color: #222;
        }

        .nav-item.active .nav-link,
        .nav-item:hover .nav-link {
            color: var(--primary-color);
            text-shadow: 0 0 5px var(--primary-color);
        }

        body.light-theme .nav-item.active .nav-link,
        body.light-theme .nav-item:hover .nav-link {
            color: #004477;
            text-shadow: none;
        }

        .nav-icon {
            font-size: 1.25rem;
            width: 1.5rem;
            text-align: center;
        }

        .nav-footer {
            flex-shrink: 0;
            padding: 1rem 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: auto;
        }

        body.light-theme .nav-footer {
            border-top: 1px solid #ddd;
        }

        .admin-content {
            flex: 1;
            padding: 2rem;
            margin-left: 210px;
            transition: all 0.3s ease;
        }

        .content-header {
            margin-bottom: 1rem;
        }

        .main-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--primary-color);
            text-shadow: 0 0 15px var(--primary-color);
        }

        body.light-theme .main-title {
            color: #004477;
            text-shadow: none;
        }

        .main-subtitle {
            color: #f0f0f0;
            font-size: 1.2rem;
        }

        body.light-theme .main-subtitle {
            color: #666;
        }

        /* Form and Table Styling */
        .form-container, .table-container {
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        body.light-theme .form-container,
        body.light-theme .table-container {
            background: var(--glass-light);
            border: 1px solid #ddd;
        }

        .form-container::before,
        .table-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), rgba(0, 255, 255, 0.5));
        }

        .form-title, .table-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: var(--primary-color);
        }

        body.light-theme .form-title,
        body.light-theme .table-title {
            color: #004477;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #f0f0f0;
        }

        body.light-theme .form-label {
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            color: #fff;
            transition: var(--transition);
        }

        body.light-theme .form-control {
            background: rgba(0, 0, 0, 0.05);
            border: 1px solid #ddd;
            color: #333;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.3);
        }

        .form-hint {
            font-size: 0.875rem;
            color: #ccc;
            margin-top: 0.25rem;
        }

        body.light-theme .form-hint {
            color: #666;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            color: #f0f0f0;
        }

        body.light-theme table {
            color: #333;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        body.light-theme th,
        body.light-theme td {
            border-bottom: 1px solid #ddd;
        }

        th {
            font-weight: 600;
            color: var(--primary-color);
            background-color: rgba(0, 212, 255, 0.1);
        }

        body.light-theme th {
            background-color: rgba(0, 68, 119, 0.1);
        }

        tr:hover {
            background-color: rgba(0, 212, 255, 0.05);
        }

        body.light-theme tr:hover {
            background-color: rgba(0, 68, 119, 0.05);
        }

        .badge {
            padding: 0.35rem 0.65rem;
            border-radius: 50rem;
            font-weight: 600;
        }

        .bg-success {
            background-color: var(--admin-success) !important;
        }

        .bg-danger {
            background-color: var(--admin-danger) !important;
        }

        /* Button Styling */
        .admin-btn {
            background: linear-gradient(135deg, var(--primary-color), rgba(0, 255, 255, 0.7));
            color: #000;
            border: none;
            padding: 0.75rem 1.25rem;
            border-radius: 30px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .admin-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(0, 255, 255, 0.4);
                color: #000;
            }

        .btn-secondary {
            background: linear-gradient(135deg, #6b7280, rgba(107, 114, 128, 0.7));
            color: white;
        }

        .btn-success {
            background: linear-gradient(135deg, var(--admin-success), rgba(16, 185, 129, 0.7));
        }

        .btn-danger {
            background: linear-gradient(135deg, var(--admin-danger), rgba(239, 68, 68, 0.7));
        }

        .btn-sm {
            padding: 0.5rem 0.75rem;
            font-size: 0.875rem;
        }

        /* Adjusted logout button size */
        .btn-logout {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            width: auto;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        /* Modal Styling */
        .modal-content {
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            color: #f0f0f0;
        }

        body.light-theme .modal-content {
            background: var(--glass-light);
            border: 1px solid #ddd;
            color: #333;
        }

        .modal-header {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        body.light-theme .modal-header {
            border-bottom: 1px solid #ddd;
        }

        .modal-title {
            color: var(--primary-color);
        }

        body.light-theme .modal-title {
            color: #004477;
        }

        .btn-close {
            filter: invert(1);
        }

        body.light-theme .btn-close {
            filter: invert(0);
        }

        /* Toggle sidebar button */
        .toggle-sidebar {
            display: none;
            position: fixed;
            top: 80px;
            left: 20px;
            z-index: 20;
            background: linear-gradient(135deg, var(--primary-color), rgba(0, 255, 255, 0.7));
            color: #000;
            border: none;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            font-size: 1.25rem;
            cursor: pointer;
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
        }

        /* Responsive design */
        @@media (max-width: 991px) {
            .sidebar {
                width: 240px;
                transform: translateX(-100%);
            }

            .admin-content {
                margin-left: 0;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .toggle-sidebar {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .admin-content.sidebar-active {
                margin-left: 240px;
            }
        }

        @@media (max-width: 767px) {
            .admin-content {
                padding: 1.5rem;
            }

                .admin-content.sidebar-active {
                    margin-left: 0;
                    opacity: 0.5;
                    pointer-events: none;
                }

            .main-title {
                font-size: 1.75rem;
            }

            .actions {
                flex-direction: column;
                gap: 0.5rem;
            }
        }
    </style>
}

<div class="dashboard">
    <button class="toggle-sidebar">
        <i class="fas fa-bars"></i>
    </button>

    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-title">
                <i class="fas fa-graduation-cap sidebar-logo"></i>
                <span>Admin Panel</span>
            </div>
        </div>

        <nav class="nav-menu">
            <div class="nav-item">
                <a asp-page="/AdminDashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt nav-icon"></i>
                    <span>Dashboard</span>
                </a>
            </div>
            <div class="nav-item">
                <a asp-page="/ClassManagment" class="nav-link">
                    <i class="fas fa-chalkboard nav-icon"></i>
                    <span>Manage Classes</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/SubjectManagment" class="nav-link">
                    <i class="fas fa-book nav-icon"></i>
                    <span>Manage Subjects</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/TeachersManagement" class="nav-link">
                    <i class="fas fa-user-tie nav-icon"></i>
                    <span>Manage Teachers</span>
                </a>
            </div>
            <div class="nav-item active">
                <a href="/StudentManagement" class="nav-link">
                    <i class="fas fa-user-graduate nav-icon"></i>
                    <span>Manage Students</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/ExamMarks" class="nav-link">
                    <i class="fas fa-clipboard-list nav-icon"></i>
                    <span>Exam Marks</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/Reports" class="nav-link">
                    <i class="fas fa-chart-line nav-icon"></i>
                    <span>View Reports</span>
                </a>
            </div>
        </nav>

        <div class="nav-footer">
            <form method="post" asp-page="/Logout">
                <button type="submit" class="admin-btn btn-logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </div>
    </aside>

    <main class="admin-content">
        <div class="content-header">
            <h1 class="main-title">Student Management</h1>
            <p class="main-subtitle">Add, update, and delete students</p>
            
            </a>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success">@Model.SuccessMessage</div>
        }
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <div class="form-container">
            <h2 class="form-title">Add New Student</h2>
            <form method="post" asp-page-handler="AddStudent">
                <div class="form-group">
                    <label asp-for="Student.FullName" class="form-label">Full Name</label>
                    <input asp-for="Student.FullName" class="form-control" placeholder="e.g., Alice Johnson">
                    <span asp-validation-for="Student.FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Student.Email" class="form-label">Email</label>
                    <input asp-for="Student.Email" type="email" class="form-control" placeholder="e.g., alice@school.edu">
                    <span asp-validation-for="Student.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Student.DateOfBirth" class="form-label">Date of Birth</label>
                    <input asp-for="Student.DateOfBirth" type="date" class="form-control">
                    <span asp-validation-for="Student.DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Student.ClassID" class="form-label">Class</label>
                    <select asp-for="Student.ClassID" class="form-control" asp-items="Model.Classes">
                        <option value="">Select class</option>
                    </select>
                    <span asp-validation-for="Student.ClassID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Student.ParentGuardianName" class="form-label">Parent/Guardian Name</label>
                    <input asp-for="Student.ParentGuardianName" class="form-control" placeholder="e.g., John Johnson">
                    <span asp-validation-for="Student.ParentGuardianName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Student.ParentGuardianPhone" class="form-label">Parent/Guardian Phone</label>
                    <input asp-for="Student.ParentGuardianPhone" class="form-control" placeholder="e.g., +1234567890">
                    <span asp-validation-for="Student.ParentGuardianPhone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Student.EnrollmentDate" class="form-label">Enrollment Date</label>
                    <input asp-for="Student.EnrollmentDate" type="date" class="form-control">
                    <span asp-validation-for="Student.EnrollmentDate" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <input asp-for="Student.IsActive" class="form-check-input" />
                    <label asp-for="Student.IsActive" class="form-check-label">Active Student</label>
                    <span asp-validation-for="Student.IsActive" class="text-danger"></span>
                </div>

                <button type="submit" class="admin-btn btn-success">
                    <i class="fas fa-plus-circle"></i> Add Student
                </button>
            </form>
        </div>

        <div class="table-container">
            <h2 class="table-title">Student List</h2>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Date of Birth</th>
                        <th>Class (Section)</th>
                        <th>Parent/Guardian</th>
                        <th>Enrollment Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.Students)
                    {
                        <tr>
                            <td>@student.FullName</td>
                            <td>@student.Email</td>
                            <td>@student.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            <td>@student.ClassName</td>
                            <td>
                                @student.ParentGuardianName<br>
                                @student.ParentGuardianPhone
                            </td>
                            <td>@student.EnrollmentDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <span class="badge @(student.IsActive ? "bg-success" : "bg-danger")">
                                    @(student.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="actions">
                                <button class="admin-btn btn-secondary btn-sm edit-btn"
                                        data-id="@student.StudentID"
                                        data-name="@student.FullName"
                                        data-email="@student.Email"
                                        data-dob="@student.DateOfBirth.ToString("yyyy-MM-dd")"
                                        data-classid="@student.ClassID"
                                        data-parentname="@student.ParentGuardianName"
                                        data-parentphone="@student.ParentGuardianPhone"
                                        data-enrollmentdate="@student.EnrollmentDate.ToString("yyyy-MM-dd")"
                                        data-isactive="@student.IsActive">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                                <form method="post" asp-page-handler="DeleteStudent" asp-route-studentId="@student.StudentID" style="display: inline;">
                                    <button type="submit" class="admin-btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this student?');">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Edit Modal -->
        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Edit Student</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="post" asp-page-handler="EditStudent">
                        <div class="modal-body">
                            <input type="hidden" id="editStudentId" name="studentId" />
                            <div class="form-group">
                                <label for="editFullName" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="editFullName" name="fullName" required>
                            </div>
                            <div class="form-group">
                                <label for="editEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="editEmail" name="email" required>
                            </div>
                            <div class="form-group">
                                <label for="editDateOfBirth" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="editDateOfBirth" name="dateOfBirth" required>
                            </div>
                            <div class="form-group">
                                <label for="editClassID" class="form-label">Class</label>
                                <select id="editClassID" name="classID" class="form-control" required>
                                    @foreach (var cls in Model.Classes)
                                    {
                                        <option value="@cls.Value">@cls.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="editParentGuardianName" class="form-label">Parent/Guardian Name</label>
                                <input type="text" class="form-control" id="editParentGuardianName" name="parentGuardianName" required>
                            </div>
                            <div class="form-group">
                                <label for="editParentGuardianPhone" class="form-label">Parent/Guardian Phone</label>
                                <input type="text" class="form-control" id="editParentGuardianPhone" name="parentGuardianPhone" required>
                            </div>
                            <div class="form-group">
                                <label for="editEnrollmentDate" class="form-label">Enrollment Date</label>
                                <input type="date" class="form-control" id="editEnrollmentDate" name="enrollmentDate" required>
                            </div>
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="editIsActive" name="isActive">
                                <label class="form-check-label" for="editIsActive">Active Student</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="admin-btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="admin-btn btn-success">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Edit modal initialization
            document.querySelectorAll('.edit-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.getElementById('editStudentId').value = this.dataset.id;
