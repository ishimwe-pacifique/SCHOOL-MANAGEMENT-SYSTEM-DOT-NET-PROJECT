@page
@model School_Management_System.Pages.ManageClassModel
@{
    ViewData["Title"] = "Class Management";
}

@section Styles {
    <style>
        :root {
            --admin-primary: #4f46e5;
            --admin-secondary: #10b981;
            --admin-danger: #ef4444;
            --admin-warning: #f59e0b;
            --admin-info: #3b82f6;
            --admin-success: #10b981;
        }

        .dashboard {
            display: flex;
            min-height: calc(100vh - 160px);
            margin-top: -80px;
            padding-top: 0;
        }

        .sidebar {
            width: 280px;
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.1);
            z-index: 10;
            transition: var(--transition);
            position: fixed;
            left: 20px;
            top: 20px;
            height: calc(100vh - 40px);
            display: flex;
            flex-direction: column;
        }

        body.light-theme .sidebar {
            background: var(--glass-light);
            border: 1px solid #ddd;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            flex-shrink: 0;
        }

        body.light-theme .sidebar-header {
            border-bottom: 1px solid #ddd;
        }

        .sidebar-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-shadow: 0 0 10px var(--primary-color);
        }

        body.light-theme .sidebar-title {
            color: #004477;
            text-shadow: none;
        }

        .sidebar-logo {
            color: var(--primary-color);
            font-size: 1.75rem;
        }

        .nav-menu {
            flex: 1;
            overflow-y: auto;
            overflow-x: hidden;
            padding: 1rem 0;
        }

        .nav-item {
            padding: 0.5rem 1.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
            margin: 0.25rem 0;
        }

            .nav-item:hover {
                background: rgba(0, 255, 255, 0.1);
                border-left-color: var(--primary-color);
                transform: translateX(5px);
            }

            .nav-item.active {
                background: rgba(0, 255, 255, 0.2);
                border-left-color: var(--primary-color);
                box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
            }

        body.light-theme .nav-item:hover {
            background: rgba(0, 68, 119, 0.1);
        }

        body.light-theme .nav-item.active {
            background: rgba(0, 68, 119, 0.2);
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #f0f0f0;
            text-decoration: none;
            font-weight: 500;
            padding: 0.5rem 0;
            transition: all 0.3s ease;
        }

        body.light-theme .nav-link {
            color: #222;
        }

        .nav-item.active .nav-link,
        .nav-item:hover .nav-link {
            color: var(--primary-color);
            text-shadow: 0 0 5px var(--primary-color);
        }

        body.light-theme .nav-item.active .nav-link,
        body.light-theme .nav-item:hover .nav-link {
            color: #004477;
            text-shadow: none;
        }

        .nav-icon {
            font-size: 1.25rem;
            width: 1.5rem;
            text-align: center;
        }

        .nav-footer {
            flex-shrink: 0;
            padding: 1rem 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: auto;
        }

        body.light-theme .nav-footer {
            border-top: 1px solid #ddd;
        }

        .admin-content {
            flex: 1;
            padding: 2rem;
            margin-left: 320px;
            transition: all 0.3s ease;
        }

        .content-header {
            margin-bottom: 2rem;
        }

        .main-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--primary-color);
            text-shadow: 0 0 15px var(--primary-color);
        }

        body.light-theme .main-title {
            color: #004477;
            text-shadow: none;
        }

        .main-subtitle {
            color: #f0f0f0;
            font-size: 1.2rem;
        }

        body.light-theme .main-subtitle {
            color: #666;
        }

        .card {
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            margin-bottom: 1.5rem;
            animation: fadeIn 0.6s ease;
            position: relative;
            overflow: hidden;
        }

        body.light-theme .card {
            background: var(--glass-light);
            border: 1px solid #ddd;
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), rgba(0, 255, 255, 0.5));
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 255, 255, 0.2);
            border-color: var(--primary-color);
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--primary-color);
        }

        body.light-theme .card-title {
            color: #004477;
        }

        .class-management-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #f0f0f0;
        }

        body.light-theme .form-label {
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.05);
            color: #f0f0f0;
            transition: all 0.3s ease;
        }

        body.light-theme .form-control {
            border: 1px solid #ddd;
            background: white;
            color: #333;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            outline: none;
            box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
        }

        .admin-btn {
            background: linear-gradient(135deg, var(--primary-color), rgba(0, 255, 255, 0.7));
            color: #000;
            border: none;
            padding: 0.75rem 1.25rem;
            border-radius: 30px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            width: 100%;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .admin-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(0, 255, 255, 0.4);
                color: #000;
            }

        .btn-edit {
            background: linear-gradient(135deg, var(--admin-info), rgba(59, 130, 246, 0.7));
            margin-right: 0.5rem;
        }

        .btn-danger {
            background: linear-gradient(135deg, var(--admin-danger), rgba(239, 68, 68, 0.7));
        }

        .btn-sm {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            width: auto;
        }

        .class-table {
            width: 100%;
            border-collapse: collapse;
        }

            .class-table th,
            .class-table td {
                padding: 0.75rem;
                text-align: left;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
                color: #f0f0f0;
            }

        body.light-theme .class-table th,
        body.light-theme .class-table td {
            border-bottom: 1px solid #ddd;
            color: #333;
        }

        .class-table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
            color: var(--primary-color);
        }

        body.light-theme .class-table th {
            color: #004477;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }

        .btn-logout {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            width: auto;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            background: linear-gradient(135deg, #666, rgba(102, 102, 102, 0.7));
            color: white;
        }

            .btn-logout:hover {
                background: linear-gradient(135deg, #ef4444, rgba(239, 68, 68, 0.7));
                color: white;
            }

        .toggle-sidebar {
            display: none;
            position: fixed;
            top: 80px;
            left: 20px;
            z-index: 20;
            background: linear-gradient(135deg, var(--primary-color), rgba(0, 255, 255, 0.7));
            color: #000;
            border: none;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            font-size: 1.25rem;
            cursor: pointer;
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Modal customization */
        .modal-content {
            border-radius: 15px;
            border: none;
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.1);
        }

        body.light-theme .modal-content {
            background: var(--glass-light);
            border: 1px solid #ddd;
        }

        .modal-header {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1.25rem 1.5rem;
        }

        body.light-theme .modal-header {
            border-bottom: 1px solid #ddd;
        }

        .modal-title {
            font-weight: 600;
            color: var(--primary-color);
        }

        body.light-theme .modal-title {
            color: #004477;
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-footer {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1rem 1.5rem;
        }

        body.light-theme .modal-footer {
            border-top: 1px solid #ddd;
        }

        /* Responsive design */
        @@media (max-width: 991px) {
            .sidebar {
                width: 240px;
                transform: translateX(-100%);
            }

            .admin-content {
                margin-left: 0;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .toggle-sidebar {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .admin-content.sidebar-active {
                margin-left: 240px;
            }

            .class-management-grid {
                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 767px) {
            .admin-content {
                padding: 1.5rem;
            }

                .admin-content.sidebar-active {
                    margin-left: 0;
                    opacity: 0.5;
                    pointer-events: none;
                }

            .action-buttons {
                flex-direction: column;
            }
        }
    </style>
}

<div class="dashboard">
    <button class="toggle-sidebar">
        <i class="fas fa-bars"></i>
    </button>

    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-title">
                <i class="fas fa-graduation-cap sidebar-logo"></i>
                <span>Admin Panel</span>
            </div>
        </div>

        <nav class="nav-menu">
            <div class="nav-item">
                <a asp-page="/AdminDashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt nav-icon"></i>
                    <span>Dashboard</span>
                </a>
            </div>
            <div class="nav-item active">
                <a href="#" class="nav-link">
                    <i class="fas fa-chalkboard nav-icon"></i>
                    <span>Manage Classes</span>
                </a>
            </div>
            <div class="nav-item">
                <a asp-page="/SubjectManagment" class="nav-link">
                    <i class="fas fa-book nav-icon"></i>
                    <span>Manage Subjects</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="TeachersManagement" class="nav-link">
                    <i class="fas fa-user-tie nav-icon"></i>
                    <span>Manage Teachers</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="StudentManagement" class="nav-link">
                    <i class="fas fa-user-graduate nav-icon"></i>
                    <span>Manage Students</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="ExamMarks" class="nav-link">
                    <i class="fas fa-clipboard-list nav-icon"></i>
                    <span>Exam Marks</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/Reports" class="nav-link">
                    <i class="fas fa-chart-line nav-icon"></i>
                    <span>View Reports</span>
                </a>
            </div>
        </nav>

        <div class="nav-footer">
            <form method="post" asp-page="/Logout">
                <button type="submit" class="admin-btn btn-logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </div>
    </aside>

    <main class="admin-content">
        <div class="content-header">
            <h1 class="main-title">Class Management</h1>
            <p class="main-subtitle">Add, update, and delete classes</p>
        </div>

        <div class="class-management-grid">
            <div class="card">
                <h2 class="card-title">Add New Class</h2>
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success">@Model.SuccessMessage</div>
                }
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }
                <form method="post">
                    <div class="form-group">
                        <label asp-for="ClassName" class="form-label">Class Name</label>
                        <input asp-for="ClassName" class="form-control" placeholder="e.g., Class 1" />
                        <span asp-validation-for="ClassName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Section" class="form-label">Section</label>
                        <input asp-for="Section" class="form-control" placeholder="e.g., A" />
                        <span asp-validation-for="Section" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Capacity" class="form-label">Capacity</label>
                        <input asp-for="Capacity" type="number" class="form-control" placeholder="e.g., 30" />
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>
                    <button type="submit" class="admin-btn">Add Class</button>
                </form>
            </div>

            <div class="card">
                <h2 class="card-title">Class List</h2>
                <table class="class-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Section</th>
                            <th>Capacity</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cls in Model.ClassList)
                        {
                            <tr>
                                <td>@cls.ClassName</td>
                                <td>@cls.Section</td>
                                <td>@cls.Capacity</td>
                                <td>
                                    <button class="admin-btn btn-sm btn-edit edit-btn"
                                            data-id="@cls.ClassID"
                                            data-name="@cls.ClassName"
                                            data-section="@cls.Section"
                                            data-capacity="@cls.Capacity">
                                        Edit
                                    </button>
                                    <form method="post" asp-page-handler="Delete" asp-route-classId="@cls.ClassID" style="display:inline">
                                        <button type="submit" class="admin-btn btn-sm btn-danger"
                                                onclick="return confirm('Are you sure you want to delete this class?')">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Edit Modal -->
        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Edit Class</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="post" asp-page-handler="Edit">
                        <div class="modal-body">
                            <input type="hidden" id="editClassId" name="classId" />
                            <div class="form-group">
                                <label for="editClassName" class="form-label">Class Name</label>
                                <input type="text" class="form-control" id="editClassName" name="className" required>
                            </div>
                            <div class="form-group">
                                <label for="editSection" class="form-label">Section</label>
                                <input type="text" class="form-control" id="editSection" name="section" required>
                            </div>
                            <div class="form-group">
                                <label for="editCapacity" class="form-label">Capacity</label>
                                <input type="number" class="form-control" id="editCapacity" name="capacity" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="admin-btn" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="admin-btn">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize edit modal
            $('.edit-btn').click(function() {
                var id = $(this).data('id');
                var name = $(this).data('name');
                var section = $(this).data('section');
                var capacity = $(this).data('capacity');

                $('#editClassId').val(id);
                $('#editClassName').val(name);
                $('#editSection').val(section);
                $('#editCapacity').val(capacity);

                var editModal = new bootstrap.Modal(document.getElementById('editModal'));
                editModal.show();
            });

            // Toggle sidebar
            const toggleButton = document.querySelector('.toggle-sidebar');
            const sidebar = document.querySelector('.sidebar');
            const content = document.querySelector('.admin-content');

            if (toggleButton) {
                toggleButton.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                    content.classList.toggle('sidebar-active');
                });
            }

            // Active menu item
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => {
                item.addEventListener('click', function() {
                    navItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        });
    </script>
}