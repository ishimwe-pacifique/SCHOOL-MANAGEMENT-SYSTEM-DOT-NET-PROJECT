@page "/AttendanceReport"
@model School_Management_System.Pages.AttendanceReportModel
@{
    //Layout = null;
    ViewData["Title"] = "Attendance Report";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        :root {
            --primary: #4f46e5;
            --primary-light: #e0e7ff;
            --secondary: #10b981;
            --secondary-light: #d1fae5;
            --danger: #ef4444;
            --danger-light: #fee2e2;
            --warning: #f59e0b;
            --warning-light: #fef3c7;
            --info: #3b82f6;
            --info-light: #dbeafe;
            --success: #10b981;
            --success-light: #d1fae5;
            --dark: #111827;
            --light: #f9fafb;
            --grey: #6b7280;
            --grey-light: #f3f4f6;
            --border-radius: 12px;
            --transition: all 0.3s ease;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }

        body {
            background-color: #f9fafb;
            color: var(--dark);
            line-height: 1.5;
        }

        .dashboard {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 280px;
            background-color: white;
            box-shadow: var(--shadow);
            z-index: 10;
            transition: var(--transition);
            position: fixed;
            left: 0;
            top: 0;
            height: 100%;
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--grey-light);
        }

        .sidebar-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .sidebar-logo {
            color: var(--primary);
            font-size: 1.75rem;
        }

        .nav-menu {
            padding: 1rem 0;
        }

        .nav-item {
            padding: 0.5rem 1.5rem;
            cursor: pointer;
            transition: var(--transition);
            border-left: 3px solid transparent;
        }

            .nav-item:hover {
                background-color: var(--grey-light);
                border-left-color: var(--primary);
            }

            .nav-item.active {
                background-color: var(--primary-light);
                border-left-color: var(--primary);
            }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--grey);
            text-decoration: none;
            font-weight: 500;
            padding: 0.5rem 0;
        }

        .nav-item.active .nav-link {
            color: var(--primary);
        }

        .nav-item:hover .nav-link {
            color: var(--primary);
        }

        .nav-icon {
            font-size: 1.25rem;
            width: 1.5rem;
            text-align: center;
        }

        .content {
            flex: 1;
            padding: 2rem;
            margin-left: 280px;
            transition: var(--transition);
        }

        .toggle-sidebar {
            display: none;
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 20;
            background-color: var(--primary);
            color: white;
            border: none;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            font-size: 1.25rem;
            cursor: pointer;
            box-shadow: var(--shadow);
        }

        .nav-footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            padding: 1.5rem;
            border-top: 1px solid var(--grey-light);
        }

        .btn-logout {
            background-color: var(--grey-light);
            color: var(--dark);
            margin-top: 1rem;
            width: 100%;
        }

            .btn-logout:hover {
                background-color: var(--grey);
                color: white;
            }

        /* Custom styles for the report page */
        .table th {
            background-color: var(--primary);
            color: white;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(79, 70, 229, 0.05);
        }

        .table-hover tbody tr:hover {
            background-color: var(--primary-light);
        }

        @@media (max-width: 991px) {
            .sidebar {
                width: 240px;
                transform: translateX(-100%);
            }

            .content {
                margin-left: 0;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .toggle-sidebar {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .content.sidebar-active {
                margin-left: 240px;
            }
        }

        @@media (max-width: 767px) {
            .content {
                padding: 1.5rem;
            }

                .content.sidebar-active {
                    margin-left: 0;
                    opacity: 0.5;
                    pointer-events: none;
                }
        }
    </style>
</head>
<body>
    <div class="dashboard">
        <button class="toggle-sidebar">
            <i class="fas fa-bars"></i>
        </button>

        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-title">
                    <i class="fas fa-chalkboard-teacher sidebar-logo"></i>
                    <span>Teacher Panel</span>
                </div>
            </div>

            <nav class="nav-menu">
                <div class="nav-item">
                    <a href="/TeacherDashboard" class="nav-link">
                        <i class="fas fa-tachometer-alt nav-icon"></i>
                        <span>Dashboard</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Attendance" class="nav-link">
                        <i class="fas fa-user-check nav-icon"></i>
                        <span>Mark Student Attendance</span>
                    </a>
                </div>
                <div class="nav-item active">
                    <a href="/AttendanceReport" class="nav-link">
                        <i class="fas fa-chart-line nav-icon"></i>
                        <span>View Attendance Reports</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/StudentMarks" class="nav-link">
                        <i class="fas fa-graduation-cap nav-icon"></i>
                        <span>View Exam Marks</span>
                    </a>
                </div>
            </nav>

            <div class="nav-footer">
                <a href="/Login" class="btn btn-logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </aside>

        <main class="content">
            <div class="container">
                <h2 class="mb-4"><i class="fas fa-chart-line"></i> Attendance Report</h2>

                <form method="post" class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label class="form-label">Select Class</label>
                        <select asp-for="ClassId" asp-items="Model.ClassList" class="form-select">
                            <option value="">-- Select Class --</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-chart-pie"></i> Generate Report
                        </button>
                    </div>
                </form>

                @if (Model.AttendanceReport != null && Model.AttendanceReport.Any())
                {
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0"><i class="fas fa-users"></i> Class: @Model.ClassName</h4>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped table-hover animate__animated animate__fadeIn mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th><i class="fas fa-user"></i> Student Name</th>
                                            <th><i class="fas fa-check-circle"></i> Days Present</th>
                                            <th><i class="fas fa-times-circle"></i> Days Absent</th>
                                            <th><i class="fas fa-percentage"></i> Attendance %</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var student in Model.AttendanceReport)
                                        {
                                            <tr>
                                                <td>@student.StudentName</td>
                                                <td>@student.DaysPresent</td>
                                                <td>@student.DaysAbsent</td>
                                                <td>@student.AttendancePercentage%</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-3">
                        <form method="post" asp-page-handler="ExportExcel">
                            <input type="hidden" asp-for="ClassId" />
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-file-excel"></i> Export to Excel
                            </button>
                        </form>
                        <form method="post" asp-page-handler="ExportPdf">
                            <input type="hidden" asp-for="ClassId" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-file-pdf"></i> Export to PDF
                            </button>
                        </form>
                    </div>

                }
                else if (Model.ReportGenerated)
                {
                    <div class="alert alert-warning animate__animated animate__fadeIn">
                        <i class="fas fa-exclamation-triangle"></i> No attendance records found for the selected class.
                    </div>
                }
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle sidebar
            const toggleButton = document.querySelector('.toggle-sidebar');
            const sidebar = document.querySelector('.sidebar');
            const content = document.querySelector('.content');

            toggleButton.addEventListener('click', function() {
                sidebar.classList.toggle('active');
                content.classList.toggle('sidebar-active');
            });

            // Set active menu item
            const currentPath = window.location.pathname;
            const navItems = document.querySelectorAll('.nav-item');

            navItems.forEach(item => {
                const link = item.querySelector('a');
                if (link.getAttribute('href') === currentPath) {
                    navItems.forEach(i => i.classList.remove('active'));
                    item.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>