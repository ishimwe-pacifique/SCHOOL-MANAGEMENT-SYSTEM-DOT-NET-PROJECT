@page "/StudentMarks"
@model StudentMarksModel
@{
    //Layout = null;
    ViewData["Title"] = "Student Marks Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Panel - Student Marks Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #4f46e5;
            --primary-light: #e0e7ff;
            --secondary: #10b981;
            --secondary-light: #d1fae5;
            --danger: #ef4444;
            --danger-light: #fee2e2;
            --warning: #f59e0b;
            --warning-light: #fef3c7;
            --info: #3b82f6;
            --info-light: #dbeafe;
            --success: #10b981;
            --success-light: #d1fae5;
            --dark: #111827;
            --light: #f9fafb;
            --grey: #6b7280;
            --grey-light: #f3f4f6;
            --border-radius: 12px;
            --transition: all 0.3s ease;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }

        body {
            background-color: #f9fafb;
            color: var(--dark);
            line-height: 1.5;
        }

        .dashboard {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 280px;
            background-color: white;
            box-shadow: var(--shadow);
            z-index: 10;
            transition: var(--transition);
            position: fixed;
            left: 0;
            top: 0;
            height: 100%;
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--grey-light);
        }

        .sidebar-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .sidebar-logo {
            color: var(--primary);
            font-size: 1.75rem;
        }

        .nav-menu {
            padding: 1rem 0;
        }

        .nav-item {
            padding: 0.5rem 1.5rem;
            cursor: pointer;
            transition: var(--transition);
            border-left: 3px solid transparent;
        }

            .nav-item:hover {
                background-color: var(--grey-light);
                border-left-color: var(--primary);
            }

            .nav-item.active {
                background-color: var(--primary-light);
                border-left-color: var(--primary);
            }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--grey);
            text-decoration: none;
            font-weight: 500;
            padding: 0.5rem 0;
        }

        .nav-item.active .nav-link {
            color: var(--primary);
        }

        .nav-item:hover .nav-link {
            color: var(--primary);
        }

        .nav-icon {
            font-size: 1.25rem;
            width: 1.5rem;
            text-align: center;
        }

        .content {
            flex: 1;
            padding: 2rem;
            margin-left: 280px;
            transition: var(--transition);
        }

        .content-header {
            margin-bottom: 2rem;
        }

        .main-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .main-subtitle {
            color: var(--grey);
            font-size: 1rem;
        }

        .btn {
            background-color: var(--primary);
            color: white;
            border: none;
            padding: 0.75rem 1.25rem;
            border-radius: var(--border-radius);
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

            .btn:hover {
                background-color: #4338ca;
                transform: translateY(-2px);
                box-shadow: var(--shadow);
            }

        .btn-secondary {
            background-color: var(--grey-light);
            color: var(--dark);
        }

            .btn-secondary:hover {
                background-color: var(--grey);
                color: white;
            }

        .btn-danger {
            background-color: var(--danger);
        }

            .btn-danger:hover {
                background-color: #dc2626;
            }

        .btn-success {
            background-color: var(--success);
        }

            .btn-success:hover {
                background-color: #0d9488;
            }

        .form-container {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .form-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: var(--primary);
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid var(--grey-light);
            border-radius: var(--border-radius);
            transition: var(--transition);
        }

            .form-control:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 3px var(--primary-light);
            }

        .form-hint {
            font-size: 0.875rem;
            color: var(--grey);
            margin-top: 0.25rem;
        }

        .table-container {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 1.5rem;
            overflow-x: auto;
        }

        .table-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: var(--primary);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid var(--grey-light);
        }

        th {
            font-weight: 600;
            color: var(--dark);
            background-color: var(--grey-light);
        }

        tr:hover {
            background-color: var(--grey-light);
        }

        .actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-sm {
            padding: 0.5rem 0.75rem;
            font-size: 0.875rem;
        }

        .logout-wrapper {
            padding: 0 1.5rem;
            margin-top: auto;
        }

        .nav-footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            padding: 1.5rem;
            border-top: 1px solid var(--grey-light);
        }

        .toggle-sidebar {
            display: none;
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 20;
            background-color: var(--primary);
            color: white;
            border: none;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            font-size: 1.25rem;
            cursor: pointer;
            box-shadow: var(--shadow);
        }

        /* Modal customization */
        .modal-content {
            border-radius: var(--border-radius);
            border: none;
            box-shadow: var(--shadow-lg);
        }

        .modal-header {
            border-bottom: 1px solid var(--grey-light);
            padding: 1.25rem 1.5rem;
        }

        .modal-title {
            font-weight: 600;
            color: var(--dark);
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-footer {
            border-top: 1px solid var(--grey-light);
            padding: 1rem 1.5rem;
        }

        /* Badge styles */
        .badge {
            padding: 0.35rem 0.65rem;
            border-radius: 50rem;
            font-weight: 500;
        }

        /* Alert styles */
        .alert {
            border-radius: var(--border-radius);
            padding: 1rem;
            margin-bottom: 1rem;
            border: 1px solid transparent;
        }

        .alert-success {
            background-color: var(--success-light);
            border-color: var(--success);
            color: var(--success);
        }

        .alert-danger {
            background-color: var(--danger-light);
            border-color: var(--danger);
            color: var(--danger);
        }

        /* Responsive design */
        @@media (max-width: 991px) {
            .sidebar {
                width: 240px;
                transform: translateX(-100%);
            }

            .content {
                margin-left: 0;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .toggle-sidebar {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .content.sidebar-active {
                margin-left: 240px;
            }
        }

        @@media (max-width: 767px) {
            .content {
                padding: 1.5rem;
            }

                .content.sidebar-active {
                    margin-left: 0;
                    opacity: 0.5;
                    pointer-events: none;
                }

            .actions {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard">
        <button class="toggle-sidebar">
            <i class="fas fa-bars"></i>
        </button>

        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-title">
                    <i class="fas fa-chalkboard-teacher sidebar-logo"></i>
                    <span>Teacher Panel</span>
                </div>
            </div>

            <nav class="nav-menu">
                <div class="nav-item">
                    <a href="/TeacherDashboard" class="nav-link">
                        <i class="fas fa-tachometer-alt nav-icon"></i>
                        <span>Dashboard</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Attendance" class="nav-link">
                        <i class="fas fa-user-check nav-icon"></i>
                        <span>Mark Student Attendance</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/AttendanceReport" class="nav-link">
                        <i class="fas fa-chart-line nav-icon"></i>
                        <span>View Attendance Reports</span>
                    </a>
                </div>
                <div class="nav-item active">
                    <a href="/StudentMarks" class="nav-link">
                        <i class="fas fa-graduation-cap nav-icon"></i>
                        <span>View Exam Marks</span>
                    </a>
                </div>
            </nav>

            <div class="nav-footer">
                <a href="/Login" class="btn btn-logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </aside>

        <main class="content">
            <div class="content-header">
                <h1 class="main-title">Student Marks Management</h1>
                <p class="main-subtitle">View and manage student exam marks</p>
                
                </a>
            </div>

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
                </div>
            }

            <div class="row">
                <!-- Left column for recording marks -->
                <div class="col-lg-5">
                    <div class="form-container">
                        <h2 class="form-title"><i class="fas fa-pencil-alt me-2"></i>Record Student Mark</h2>
                        <form method="post" id="recordMarkForm">
                            <div class="form-group">
                                <label class="form-label">Select Class</label>
                                <select asp-for="SelectedClassId" asp-items="Model.ClassOptions"
                                        class="form-control" onchange="this.form.submit()">
                                    <option value="">-- Select Class --</option>
                                </select>
                            </div>

                            @if (Model.SelectedClassId.HasValue)
                            {
                                <div class="form-group">
                                    <label class="form-label">Select Student</label>
                                    <select asp-for="SelectedStudentId" asp-items="Model.StudentOptions"
                                            class="form-control">
                                        <option value="">-- Select Student --</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Select Subject</label>
                                    <select asp-for="SelectedSubject" asp-items="Model.SubjectOptions" class="form-control">
                                        <option value="">-- Select Subject --</option>
                                    </select>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Mark</label>
                                            <div class="input-group">
                                                <input asp-for="Mark" class="form-control" type="number"
                                                       min="0" max="100" placeholder="0-100" />
                                                <span class="input-group-text">/ 100</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Date of Exam</label>
                                            <input asp-for="DateOfExam" class="form-control" type="date" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mt-3">
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-save me-2"></i>Save Mark
                                    </button>
                                </div>
                            }
                        </form>
                    </div>
                </div>

                <!-- Right column for displaying marks -->
                <div class="col-lg-7">
                    <div class="table-container">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="table-title"><i class="fas fa-list me-2"></i>Student Marks List</h2>
                            <form method="post" class="d-flex">
                                <select asp-for="SelectedClassId" class="form-control me-2"
                                        asp-items="Model.ClassOptions" onchange="this.form.submit()"
                                        style="width: auto;" aria-label="Filter by class">
                                    <option value="">All Classes</option>
                                </select>
                                <button type="submit" class="btn btn-secondary">
                                    <i class="fas fa-filter"></i>
                                </button>
                            </form>
                        </div>

                        @if (Model.StudentMarks != null && Model.StudentMarks.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Student Name</th>
                                            <th>Subject</th>
                                            <th class="text-center">Mark</th>
                                            <th>Date of Exam</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var mark in Model.StudentMarks)
                                        {
                                            <tr>
                                                <td>@mark.StudentName</td>
                                                <td>@mark.Subject</td>
                                                <td class="text-center">
                                                    @{
                                                        var badgeClass = mark.Mark >= 70 ? "bg-success" :
                                                        mark.Mark >= 50 ? "bg-warning" : "bg-danger";
                                                    }
                                                    <span class="badge @badgeClass">@mark.Mark%</span>
                                                </td>
                                                <td>@mark.DateOfExam.ToString("dd/MM/yyyy")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else if (Model.SelectedClassId != null)
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-inbox fs-1 text-muted"></i>
                                <p class="text-muted mt-2">No marks found for this class.</p>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-filter-circle fs-1 text-muted"></i>
                                <p class="text-muted mt-2">Please select a class to view marks.</p>
                            </div>
                        }
                    </div>

                    <!-- Class Report Summary -->
                    <div class="form-container mt-4">
                        <h2 class="form-title"><i class="fas fa-chart-bar me-2"></i>Class Report Summary</h2>
                        <div class="d-flex justify-content-around text-center">
                            <div class="p-3">
                                <h3 class="text-primary mb-0">@Model.StudentMarks.Count</h3>
                                <small class="text-muted">Total Records</small>
                            </div>
                            <div class="p-3">
                                <h3 class="text-success mb-0">@Model.StudentMarks.Where(m => m.Mark >= 70).Count()</h3>
                                <small class="text-muted">Distinction Marks</small>
                            </div>
                            <div class="p-3">
                                <h3 class="text-danger mb-0">@Model.StudentMarks.Where(m => m.Mark < 50).Count()</h3>
                                <small class="text-muted">Failed Marks</small>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <a href="#" class="btn btn-outline-primary w-100">
                                <i class="fas fa-file-pdf me-2"></i>Generate Full Report
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script>
                $(document).ready(function () {
                    // Toggle sidebar
                    const toggleButton = document.querySelector('.toggle-sidebar');
                    const sidebar = document.querySelector('.sidebar');
                    const content = document.querySelector('.content');

                    if (toggleButton) {
                        toggleButton.addEventListener('click', function () {
                            sidebar.classList.toggle('active');
                            content.classList.toggle('sidebar-active');
                        });
                    }

                    // Mark input validation
                    const markInput = document.querySelector('input[type="number"]');
                    if (markInput) {
                        markInput.addEventListener('input', function () {
                            if (this.value > 100) this.value = 100;
                            if (this.value < 0) this.value = 0;
                        });
                    }
                });
            </script>
        </main>
    </div>
</body>
</html>