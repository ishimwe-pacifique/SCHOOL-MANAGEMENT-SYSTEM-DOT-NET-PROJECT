@page
@model School_Management_System.Pages.TeachersManagementModel
@{
    ViewData["Title"] = "Teacher Management";
    //Layout = null;
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Teacher Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --admin-primary: #4f46e5;
            --admin-secondary: #10b981;
            --admin-danger: #ef4444;
            --admin-warning: #f59e0b;
            --admin-info: #3b82f6;
            --admin-success: #10b981;
            --primary-color: #00ffff;
            --glass-dark: rgba(0, 0, 0, 0.7);
            --glass-light: rgba(255, 255, 255, 0.8);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }

        body {
            background-color: #121212;
            color: #f0f0f0;
            line-height: 1.5;
        }

            body.light-theme {
                background-color: #f9fafb;
                color: #222;
            }

        .dashboard {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 280px;
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.1);
            z-index: 10;
            transition: var(--transition);
            position: fixed;
            left: 20px;
            top: 20px;
            height: calc(100vh - 40px);
            display: flex;
            flex-direction: column;
        }

        body.light-theme .sidebar {
            background: var(--glass-light);
            border: 1px solid #ddd;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            flex-shrink: 0;
        }

        body.light-theme .sidebar-header {
            border-bottom: 1px solid #ddd;
        }

        .sidebar-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-shadow: 0 0 10px var(--primary-color);
        }

        body.light-theme .sidebar-title {
            color: #004477;
            text-shadow: none;
        }

        .sidebar-logo {
            color: var(--primary-color);
            font-size: 1.75rem;
        }

        .nav-menu {
            flex: 1;
            overflow-y: auto;
            overflow-x: hidden;
            padding: 1rem 0;
        }

            .nav-menu::-webkit-scrollbar {
                width: 6px;
            }

            .nav-menu::-webkit-scrollbar-track {
                background: rgba(255, 255, 255, 0.1);
                border-radius: 10px;
            }

            .nav-menu::-webkit-scrollbar-thumb {
                background: linear-gradient(135deg, var(--primary-color), rgba(0, 255, 255, 0.7));
                border-radius: 10px;
                box-shadow: 0 0 5px rgba(0, 255, 255, 0.3);
            }

                .nav-menu::-webkit-scrollbar-thumb:hover {
                    background: linear-gradient(135deg, #00d4ff, var(--primary-color));
                    box-shadow: 0 0 8px rgba(0, 255, 255, 0.5);
                }

        .nav-menu {
            scrollbar-width: thin;
            scrollbar-color: var(--primary-color) rgba(255, 255, 255, 0.1);
        }

        body.light-theme .nav-menu::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.1);
        }

        body.light-theme .nav-menu::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, #004477, rgba(0, 68, 119, 0.7));
        }

        body.light-theme .nav-menu {
            scrollbar-color: #004477 rgba(0, 0, 0, 0.1);
        }

        .nav-item {
            padding: 0.5rem 1.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
            margin: 0.25rem 0;
        }

            .nav-item:hover {
                background: rgba(0, 255, 255, 0.1);
                border-left-color: var(--primary-color);
                transform: translateX(5px);
            }

            .nav-item.active {
                background: rgba(0, 255, 255, 0.2);
                border-left-color: var(--primary-color);
                box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
            }

        body.light-theme .nav-item:hover {
            background: rgba(0, 68, 119, 0.1);
        }

        body.light-theme .nav-item.active {
            background: rgba(0, 68, 119, 0.2);
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #f0f0f0;
            text-decoration: none;
            font-weight: 500;
            padding: 0.5rem 0;
            transition: all 0.3s ease;
        }

        body.light-theme .nav-link {
            color: #222;
        }

        .nav-item.active .nav-link,
        .nav-item:hover .nav-link {
            color: var(--primary-color);
            text-shadow: 0 0 5px var(--primary-color);
        }

        body.light-theme .nav-item.active .nav-link,
        body.light-theme .nav-item:hover .nav-link {
            color: #004477;
            text-shadow: none;
        }

        .nav-icon {
            font-size: 1.25rem;
            width: 1.5rem;
            text-align: center;
        }

        .nav-footer {
            flex-shrink: 0;
            padding: 1rem 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: auto;
        }

        body.light-theme .nav-footer {
            border-top: 1px solid #ddd;
        }

        .content {
            flex: 1;
            padding: 2rem;
            margin-left: 210px;
            transition: all 0.3s ease;
        }

        .content-header {
            margin-bottom: 1rem;
            text-align: center;
        }

        .main-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--primary-color);
            text-shadow: 0 0 15px var(--primary-color);
        }

        body.light-theme .main-title {
            color: #004477;
            text-shadow: none;
        }

        .main-subtitle {
            color: #f0f0f0;
            font-size: 1.2rem;
        }

        body.light-theme .main-subtitle {
            color: #666;
        }

        .form-container {
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        body.light-theme .form-container {
            background: var(--glass-light);
            border: 1px solid #ddd;
        }

        .form-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), rgba(0, 255, 255, 0.5));
        }

        .form-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: var(--primary-color);
        }

        body.light-theme .form-title {
            color: #004477;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #f0f0f0;
        }

        body.light-theme .form-label {
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            color: #f0f0f0;
            transition: var(--transition);
        }

        body.light-theme .form-control {
            background: rgba(255, 255, 255, 0.8);
            border: 1px solid #ddd;
            color: #333;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(0, 255, 255, 0.3);
        }

        body.light-theme .form-control:focus {
            box-shadow: 0 0 0 3px rgba(0, 68, 119, 0.3);
        }

        .form-hint {
            font-size: 0.875rem;
            color: #ccc;
            margin-top: 0.25rem;
        }

        body.light-theme .form-hint {
            color: #666;
        }

        .table-container {
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 1.5rem;
            overflow-x: auto;
            margin-bottom: 2rem;
            position: relative;
        }

        body.light-theme .table-container {
            background: var(--glass-light);
            border: 1px solid #ddd;
        }

        .table-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--admin-info), rgba(59, 130, 246, 0.5));
        }

        .table-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: var(--primary-color);
        }

        body.light-theme .table-title {
            color: #004477;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        body.light-theme th,
        body.light-theme td {
            border-bottom: 1px solid #ddd;
        }

        th {
            font-weight: 600;
            color: var(--primary-color);
            background: rgba(0, 255, 255, 0.1);
        }

        body.light-theme th {
            color: #004477;
            background: rgba(0, 68, 119, 0.1);
        }

        tr:hover {
            background: rgba(0, 255, 255, 0.05);
        }

        body.light-theme tr:hover {
            background: rgba(0, 68, 119, 0.05);
        }

        .actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn {
            border: none;
            padding: 0.75rem 1.25rem;
            border-radius: 30px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), rgba(0, 255, 255, 0.7));
            color: #000;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(0, 255, 255, 0.4);
                color: #000;
            }

        .btn-secondary {
            background: linear-gradient(135deg, var(--admin-warning), rgba(245, 158, 11, 0.7));
            color: #000;
        }

            .btn-secondary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(245, 158, 11, 0.4);
                color: #000;
            }

        .btn-danger {
            background: linear-gradient(135deg, var(--admin-danger), rgba(239, 68, 68, 0.7));
            color: white;
        }

            .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(239, 68, 68, 0.4);
                color: white;
            }

        .btn-success {
            background: linear-gradient(135deg, var(--admin-success), rgba(16, 185, 129, 0.7));
            color: #000;
        }

            .btn-success:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(16, 185, 129, 0.4);
                color: #000;
            }

        .btn-sm {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
        }

        .btn-logout {
            background: linear-gradient(135deg, #666, rgba(102, 102, 102, 0.7));
            color: white;
            padding: 0.5rem 1rem; /* Adjusted size to match the admin dashboard */
            width: 100%;
        }

            .btn-logout:hover {
                background: linear-gradient(135deg, #ef4444, rgba(239, 68, 68, 0.7));
                color: white;
            }

        .toggle-sidebar {
            display: none;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 20;
            background: linear-gradient(135deg, var(--primary-color), rgba(0, 255, 255, 0.7));
            color: #000;
            border: none;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            font-size: 1.25rem;
            cursor: pointer;
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
        }

        /* Modal customization */
        .modal-content {
            background: var(--glass-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.1);
            color: #f0f0f0;
        }

        body.light-theme .modal-content {
            background: var(--glass-light);
            border: 1px solid #ddd;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            color: #222;
        }

        .modal-header {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1.25rem 1.5rem;
        }

        body.light-theme .modal-header {
            border-bottom: 1px solid #ddd;
        }

        .modal-title {
            font-weight: 600;
            color: var(--primary-color);
        }

        body.light-theme .modal-title {
            color: #004477;
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-footer {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1rem 1.5rem;
        }

        body.light-theme .modal-footer {
            border-top: 1px solid #ddd;
        }

        /* Alert styles */
        .alert {
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            position: relative;
            overflow: hidden;
            border: none;
        }

        .alert-success {
            background: rgba(16, 185, 129, 0.2);
            color: #10b981;
            border-left: 4px solid #10b981;
        }

        .alert-danger {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
            border-left: 4px solid #ef4444;
        }

        /* Responsive design */
        @@media (max-width: 991px) {
            .sidebar {
                width: 240px;
                transform: translateX(-100%);
                left: 0;
                top: 0;
                height: 100vh;
                border-radius: 0;
            }

            .content {
                margin-left: 0;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .toggle-sidebar {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .content.sidebar-active {
                margin-left: 240px;
            }
        }

        @@media (max-width: 767px) {
            .content {
                padding: 1.5rem;
            }

                .content.sidebar-active {
                    margin-left: 0;
                    opacity: 0.5;
                    pointer-events: none;
                }

            .main-title {
                font-size: 2rem;
            }

            .actions {
                flex-direction: column;
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        [data-aos] {
            opacity: 0;
            transition-property: opacity, transform;
        }

            [data-aos].aos-animate {
                opacity: 1;
                transform: translateY(0);
            }
    </style>
</head>
<body>
    <div class="dashboard">
        <button class="toggle-sidebar">
            <i class="fas fa-bars"></i>
        </button>

        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-title">
                    <i class="fas fa-graduation-cap sidebar-logo"></i>
                    <span>Admin Panel</span>
                </div>
            </div>

            <nav class="nav-menu">
                <div class="nav-item">
                    <a asp-page="/AdminDashboard" class="nav-link">
                        <i class="fas fa-tachometer-alt nav-icon"></i>
                        <span>Dashboard</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a asp-page="/ClassManagment" class="nav-link">
                        <i class="fas fa-chalkboard nav-icon"></i>
                        <span>Manage Classes</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/SubjectManagment" class="nav-link">
                        <i class="fas fa-book nav-icon"></i>
                        <span>Manage Subjects</span>
                    </a>
                </div>
                <div class="nav-item active">
                    <a href="/TeacherManagement" class="nav-link">
                        <i class="fas fa-chalkboard-teacher nav-icon"></i>
                        <span>Manage Teachers</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/StudentManagement" class="nav-link">
                        <i class="fas fa-user-graduate nav-icon"></i>
                        <span>Manage Students</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/ExamMarks" class="nav-link">
                        <i class="fas fa-clipboard-list nav-icon"></i>
                        <span>Exam Marks</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Reports" class="nav-link">
                        <i class="fas fa-chart-line nav-icon"></i>
                        <span>View Reports</span>
                    </a>
                </div>
            </nav>

            <div class="nav-footer">
                <form method="post" asp-page="/Logout">
                    <button type="submit" class="btn btn-logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>
        </aside>

        <main class="content">
            <div class="content-header">
                <h1 class="main-title">Teacher Management</h1>
                <p class="main-subtitle">Add, update, and delete teachers</p>
                
                </a>
            </div>

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">@Model.SuccessMessage</div>
            }
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <div class="form-container" data-aos="fade-up">
                <h2 class="form-title">Add New Teacher</h2>
                <form method="post" asp-page-handler="AddTeacher">
                    <div class="form-group">
                        <label asp-for="Teacher.FullName" class="form-label">Full Name</label>
                        <input asp-for="Teacher.FullName" class="form-control" placeholder="e.g., John Doe">
                        <span asp-validation-for="Teacher.FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Teacher.Email" class="form-label">Email</label>
                        <input asp-for="Teacher.Email" type="email" class="form-control" placeholder="e.g., john.doe@school.edu">
                        <span asp-validation-for="Teacher.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Teacher.Phone" class="form-label">Phone Number</label>
                        <input asp-for="Teacher.Phone" class="form-control" placeholder="e.g., +1234567890">
                        <span asp-validation-for="Teacher.Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Teacher.TemporaryPassword" class="form-label">Temporary Password</label>
                        <input asp-for="Teacher.TemporaryPassword" type="password" class="form-control" placeholder="Enter temporary password">
                        <span asp-validation-for="Teacher.TemporaryPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Teacher.PrimarySubjectID" class="form-label">Primary Subject</label>
                        <select asp-for="Teacher.PrimarySubjectID" class="form-control" asp-items="Model.Subjects">
                            <option value="">Select primary subject</option>
                        </select>
                        <span asp-validation-for="Teacher.PrimarySubjectID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Teacher.JoinDate" class="form-label">Join Date</label>
                        <input asp-for="Teacher.JoinDate" type="date" class="form-control">
                        <span asp-validation-for="Teacher.JoinDate" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Add Teacher</button>
                </form>
            </div>

            <div class="table-container" data-aos="fade-up" data-aos-delay="100">
                <h2 class="table-title">Teacher List</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Primary Subject</th>
                            <th>Join Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Model.Teachers)
                        {
                            <tr>
                                <td>@teacher.FullName</td>
                                <td>@teacher.Email</td>
                                <td>@teacher.Phone</td>
                                <td>@teacher.PrimarySubjectName</td>
                                <td>@teacher.JoinDate.ToString("yyyy-MM-dd")</td>
                                <td class="actions">
                                    <button class="btn btn-secondary btn-sm edit-btn"
                                            data-id="@teacher.TeacherID"
                                            data-name="@teacher.FullName"
                                            data-email="@teacher.Email"
                                            data-phone="@teacher.Phone"
                                            data-subjectid="@teacher.PrimarySubjectID"
                                            data-joindate="@teacher.JoinDate.ToString("yyyy-MM-dd")">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <form method="post" asp-page-handler="DeleteTeacher" asp-route-teacherId="@teacher.TeacherID" style="display: inline;">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this teacher?');">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Edit Modal -->
            <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editModalLabel">Edit Teacher</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form method="post" asp-page-handler="EditTeacher">
                            <div class="modal-body">
                                <input type="hidden" id="editTeacherId" name="teacherId" />
                                <div class="form-group">
                                    <label for="editFullName" class="form-label">Full Name</label>
                                    <input type="text" class="form-control" id="editFullName" name="fullName" required>
                                </div>
                                <div class="form-group">
                                    <label for="editEmail" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="editEmail" name="email" required>
                                </div>
                                <div class="form-group">
                                    <label for="editPhone" class="form-label">Phone Number</label>
                                    <input type="text" class="form-control" id="editPhone" name="phone" required>
                                </div>
                                <div class="form-group">
                                    <label for="editPrimarySubjectID" class="form-label">Primary Subject</label>
                                    <select id="editPrimarySubjectID" name="primarySubjectID" class="form-control" required>
                                        @foreach (var subject in Model.Subjects)
                                        {
                                            <option value="@subject.Value">@subject.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="editJoinDate" class="form-label">Join Date</label>
                                    <input type="date" class="form-control" id="editJoinDate" name="joinDate" required>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-success">Save changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script>
                $(document).ready(function() {
                    // Initialize edit modal
                    $('.edit-btn').click(function() {
                        var id = $(this).data('id');
                        var name = $(this).data('name');
                        var email = $(this).data('email');
                        var phone = $(this).data('phone');
                        var subjectId = $(this).data('subjectid');
                        var joinDate = $(this).data('joindate');

                        $('#editTeacherId').val(id);
                        $('#editFullName').val(name);
                        $('#editEmail').val(email);
                        $('#editPhone').val(phone);
                        $('#editPrimarySubjectID').val(subjectId);
                        $('#editJoinDate').val(joinDate);

                        var editModal = new bootstrap.Modal(document.getElementById('editModal'));
                        editModal.show();
                    });

                    // Toggle sidebar
                    const toggleButton = document.querySelector('.toggle-sidebar');
                    const sidebar = document.querySelector('.sidebar');
                    const content = document.querySelector('.content');

                    if (toggleButton) {
                        toggleButton.addEventListener('click', function() {
                            sidebar.classList.toggle('active');
                            content.classList.toggle('sidebar-active');
                        });
                    }

                    // Simple animation on load
                    const elements = document.querySelectorAll('[data-aos]');
                    elements.forEach((el, index) => {
                        el.style.opacity = '0';
                        el.style.transform = 'translateY(20px)';
                        setTimeout(() => {
                            el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                            el.style.opacity = '1';
                            el.style.transform = 'translateY(0)';
                        }, index * 100);
                    });
                });
            </script>
        </main>
    </div>
</body>
</html>