@page "/AttendanceReport"
@model School_Management_System.Pages.AttendanceReportModel
@{
    ViewData["Title"] = "Attendance Report";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Attendance Report</h2>
    <a asp-page="/Dashboard" class="btn btn-secondary">Back to Dashboard</a>
</div>

<form method="post" class="row g-3 mb-4">
    <div class="col-md-6">
        <label class="form-label">Select Class</label>
        <select asp-for="ClassId" asp-items="Model.ClassList" class="form-select">
            <option value="">-- Select Class --</option>
        </select>
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-primary">Generate Report</button>
    </div>
</form>

@if (Model.AttendanceReport != null && Model.AttendanceReport.Any())
{
    <h4>Class: @Model.ClassName</h4>
    <table class="table table-bordered table-striped animate__animated animate__fadeIn">
        <thead class="table-dark">
            <tr>
                <th>Student Name</th>
                <th>Days Present</th>
                <th>Days Absent</th>
                <th>Attendance %</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.AttendanceReport)
            {
                <tr>
                    <td>@student.StudentName</td>
                    <td>@student.DaysPresent</td>
                    <td>@student.DaysAbsent</td>
                    <td>@student.AttendancePercentage%</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex gap-2 mt-3">
        <form method="post" asp-page-handler="ExportExcel">
            <input type="hidden" asp-for="ClassId" />
            <button type="submit" class="btn btn-success">Export to Excel</button>
        </form>
        <form method="post" asp-page-handler="ExportPdf">
            <input type="hidden" asp-for="ClassId" />
            <button type="submit" class="btn btn-danger">Export to PDF</button>
        </form>
    </div>
}
else if (Model.ReportGenerated)
{
    <div class="alert alert-warning">No attendance records found for the selected class.</div>
}
